<?xml version="1.0" encoding="utf-8"?><!--  android:background="@drawable/rectangle_green_green_black_corner_hall_selector_"-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/gd__hall_game_pic_iv"
        android:layout_width="180dp"
        android:layout_height="123dp"
        android:layout_marginBottom="8dp"
        android:scaleType="fitXY"
        android:src="@mipmap/gd_chips_dice_trans" />

    <TextView
        android:id="@+id/gd__hall_game_title_tv"
        android:layout_width="180dp"
        android:layout_height="22dp"
        android:layout_gravity="bottom|center_horizontal"
        android:background="@drawable/slots_text_bg"
        android:gravity="center"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:text="12"
        android:textColor="@color/white"
        android:textSize="14sp" />
</LinearLayout>