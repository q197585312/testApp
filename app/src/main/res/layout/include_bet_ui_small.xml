<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_bet_button"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/gd__tv_table_bet_cancel"
        android:layout_width="28dp"
        android:layout_height="14.5dp"
        android:background="@mipmap/gd_noimg"
        android:clickable="true" />

    <ImageView
        android:id="@+id/gd__tv_table_bet_replay"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:background="@mipmap/gd_replayimg"
        android:clickable="true" />

    <ImageView
        android:id="@+id/gd__tv_table_bet_sure"
        android:layout_width="28dp"
        android:layout_height="14.5dp"
        android:background="@mipmap/gd_sureimg"
        android:clickable="true" />

</LinearLayout>