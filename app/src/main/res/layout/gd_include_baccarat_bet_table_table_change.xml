<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gd_baccarat_bet_table_change"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="20dp"
    android:background="#006E09"
    android:visibility="gone">

    <FrameLayout
        android:id="@+id/fl_baccarat_bet_bg"
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:background="@mipmap/gd_baccarat_bg_h_table_change">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <FrameLayout
                    android:id="@+id/fl_table_player_parent"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"></FrameLayout>

                <FrameLayout
                    android:id="@+id/fl_table_banker_parent"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"></FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <FrameLayout
                    android:id="@+id/fl_table_pp_parent"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"></FrameLayout>

                <FrameLayout
                    android:id="@+id/fl_table_tie_parent"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"></FrameLayout>

                <FrameLayout
                    android:id="@+id/fl_table_bp_parent"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"></FrameLayout>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/ll_result"
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:background="#90000000"
        android:orientation="horizontal"
        android:padding="5dp"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/ll_player_parent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="1.5dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@mipmap/gd_blue"
                android:paddingLeft="5dp"
                android:paddingRight="5dp">

                <TextView
                    android:id="@+id/tv_player_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/player_home"
                    android:textColor="@color/white"></TextView>

                <TextView
                    android:id="@+id/tv_player"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:text="0"
                    android:textColor="@color/white"></TextView>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_player_1"
                        android:layout_width="30dp"
                        android:layout_height="38dp"
                        android:visibility="gone"></ImageView>

                    <View
                        android:layout_width="15dp"
                        android:layout_height="0dp"></View>

                    <ImageView
                        android:id="@+id/img_player_2"
                        android:layout_width="30dp"
                        android:layout_height="38dp"
                        android:layout_gravity="right"
                        android:visibility="gone"></ImageView>
                </LinearLayout>

                <ImageView
                    android:id="@+id/img_player_3"
                    android:layout_width="43dp"
                    android:layout_height="28dp"
                    android:layout_gravity="bottom|center_horizontal"
                    android:visibility="gone"></ImageView>
            </FrameLayout>
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"></View>

        <LinearLayout
            android:id="@+id/ll_banker_parent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="1.5dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@mipmap/gd_red"
                android:paddingLeft="5dp"
                android:paddingRight="5dp">

                <TextView
                    android:id="@+id/tv_banker_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/banker_home"
                    android:textColor="@color/white"></TextView>

                <TextView
                    android:id="@+id/tv_banker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:text="0"
                    android:textColor="@color/white"></TextView>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_banker_1"
                        android:layout_width="30dp"
                        android:layout_height="38dp"
                        android:visibility="gone"></ImageView>

                    <View
                        android:layout_width="15dp"
                        android:layout_height="0dp"></View>

                    <ImageView
                        android:id="@+id/img_banker_2"
                        android:layout_width="30dp"
                        android:layout_height="38dp"
                        android:layout_gravity="right"
                        android:visibility="gone"></ImageView>
                </LinearLayout>


                <ImageView
                    android:id="@+id/img_banker_3"
                    android:layout_width="43dp"
                    android:layout_height="28dp"
                    android:layout_gravity="bottom|center_horizontal"
                    android:visibility="gone"></ImageView>
            </FrameLayout>
        </LinearLayout>

    </LinearLayout>

</FrameLayout>