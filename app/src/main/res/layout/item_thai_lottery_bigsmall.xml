<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/thai_lottery_bet_ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="visible">

    <include layout="@layout/header_thai_lottery_bigsmall" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/thai_lottery_big"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="3dp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/thai_lottery_small"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="3dp"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="3dp"
            android:text="@string/amount_lottery"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="3dp"
            android:text="@string/net_amount"
            android:textColor="@color/black" />
    </LinearLayout>

    <View style="@style/line_horizontal_grey1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <FrameLayout
            style="@style/style_weight_horizontal"
            android:layout_height="30dip"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">

            <RadioButton
                android:id="@+id/thai_lottery_big_radiobtn"
                style="@style/style_wrap_wrap"
                android:layout_gravity="center"
                android:background="@drawable/oval_white_red_center_check_bnt_selector"
                android:button="@null"
                android:gravity="center" />
        </FrameLayout>

        <View style="@style/line_vertical_grey1" />

        <FrameLayout
            style="@style/style_weight_horizontal"
            android:layout_height="30dip"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">

            <RadioButton
                android:id="@+id/thai_lottery_small_radiobtn"
                style="@style/style_wrap_wrap"
                android:layout_gravity="center"
                android:background="@drawable/oval_white_red_center_check_bnt_selector"
                android:button="@null"
                android:gravity="center" />
        </FrameLayout>

        <View style="@style/line_vertical_grey1" />

        <EditText
            android:id="@+id/thai_lottery_bigsmall_betmoney"
            android:layout_width="0dip"
            android:layout_height="30dip"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/rectangle_greylight_greystoke_corners7"
            android:gravity="center"
            android:imeOptions="flagNoExtractUi"
            android:inputType="number|numberDecimal"
            android:maxLength="6"
            android:text=""
            android:textColor="@color/black" />

        <View style="@style/line_vertical_grey1" />

        <TextView
            android:id="@+id/thai_lottery_bigsmall_reallymoney"
            android:layout_width="0dip"
            android:layout_height="30dip"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/rectangle_greylight_greystoke_corners7"
            android:gravity="center"
            android:textColor="@color/black" />
    </LinearLayout>

    <View style="@style/line_horizontal_grey1" />
</LinearLayout>