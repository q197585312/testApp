<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/rectangle_white_corners8"
        android:orientation="vertical">

        <TextView
            android:id="@+id/gd__tv_title"
            style="@style/text_match_grey18"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/choose_language"
            android:textColor="@color/black"
            android:textSize="16sp"

            android:textStyle="bold" />

        <View
            style="@style/line_horizontal_grey1"
            android:background="@color/grey_light" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/gd__base_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_arrow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <View
            android:id="@+id/gd__view_weight1"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="0.75" />

        <View
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/gd_triangle_white_bottom" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="2" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/fl_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="2dp"
        android:visibility="gone"></FrameLayout>

</LinearLayout>