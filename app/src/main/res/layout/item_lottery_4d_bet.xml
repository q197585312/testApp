<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_item"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@color/black"
    android:orientation="horizontal"
    android:paddingTop="7dp"
    android:paddingBottom="7dp">

    <EditText
        android:id="@+id/edt_bet_number"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_weight="1"
        android:background="@drawable/shape_lottery_4d_edt"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="4"
        android:padding="5dp"
        android:singleLine="true"

        android:textColor="@color/black"
        android:textSize="11sp" />

    <EditText
        android:id="@+id/edt_big_amount"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_weight="1"
        android:background="@drawable/shape_lottery_4d_edt"
        android:gravity="center_vertical|right"
        android:inputType="number"
        android:padding="5dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="11sp" />

    <EditText
        android:id="@+id/edt_small_amount"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_weight="1"
        android:background="@drawable/shape_lottery_4d_edt"
        android:gravity="center_vertical|right"
        android:inputType="number"
        android:padding="5dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="11sp" />

    <EditText
        android:id="@+id/edt_A_amount"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_weight="1"
        android:background="@drawable/shape_lottery_4d_edt"
        android:gravity="center_vertical|right"
        android:inputType="number"
        android:padding="5dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="11sp"
        android:visibility="gone" />

    <EditText
        android:id="@+id/edt_ABC_amount"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_weight="1"
        android:background="@drawable/shape_lottery_4d_edt"
        android:gravity="center_vertical|right"
        android:inputType="number"
        android:padding="5dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="11sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_bet_time"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_weight="1"
        android:background="@drawable/shape_lottery_4d_edt"
        android:drawableRight="@mipmap/little_down"
        android:gravity="center"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:text="17/11"
        android:textColor="@color/black"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/tv_bet_type"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_weight="1"
        android:background="@drawable/shape_lottery_4d_edt"
        android:drawableRight="@mipmap/little_down"
        android:gravity="center_vertical"
        android:lines="1"
        android:paddingLeft="1dp"
        android:paddingRight="1dp"
        android:singleLine="true"
        android:text="Normal"
        android:textColor="@color/black"
        android:textSize="10sp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_bet_amount"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0.00"
            android:textColor="@color/selector_lottery_4d_type"
            android:textSize="9sp" />

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1.1"
            android:background="@drawable/shape_lottery_item_cancel"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingTop="1dp"
            android:paddingRight="5dp"
            android:paddingBottom="1dp"
            android:text="@string/cancel"
            android:textSize="10sp" />
    </LinearLayout>
</LinearLayout>