<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="@color/green_light_title"
        android:orientation="horizontal">
        <TextView

            android:id="@+id/iv_all_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/green_light_white"
            android:contentDescription="@null"
            android:drawableLeft="@mipmap/add_green"
            android:drawablePadding="5dp"
            android:padding="5dp"
            android:src="@mipmap/add_green"
            android:text="@string/All_Markets"
            android:textColor="@color/green900"
            android:textSize="12sp" />
        <ImageView
            android:id="@+id/img_word_cup"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@mipmap/word_cup"
            android:visibility="gone" />
        <LinearLayout
            android:id="@+id/ll_countryMarket"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/football"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <ImageView

                android:layout_width="26dp"
                android:layout_height="26dp"
                android:background="@color/green_light_white"
                android:contentDescription="@null"
                android:padding="5dp"
                android:src="@mipmap/add_green" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout

        style="@style/style_match_wrap"
        android:orientation="horizontal"
        android:visibility="visible">

        <TextView
            android:id="@+id/table_number_tv"
        style="@style/style_wrap_wrap"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="5dp"
            android:text="0"
            android:textColor="@color/sports_match"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            style="@style/style_wrap_wrap"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="3dp">

            <TextView
                style="@style/style_weight_vertical"
                android:text="@string/games"
                android:textColor="@color/sports_match"
                android:textSize="10sp" />

            <TextView
                style="@style/style_weight_vertical"
                android:layout_marginTop="1dp"
                android:text="@string/present"
                android:textColor="@color/sports_match"
                android:textSize="10sp" />
        </LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/ll_choice_type"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:gravity="center_vertical|right"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/table_match_mark_tv"
                    style="@style/style_wrap_wrap"
                    android:layout_marginRight="3dp"
                    android:text=""
                    android:textColor="@color/sports_match"
                    android:textSize="16sp"
                    />
                <ImageView
                    android:layout_width="26dp"
                    android:layout_height="match_parent"
                    android:background="@color/black"
                    android:padding="4dp"
                    android:src="@mipmap/sport_odds_type_arrow_oval_green" />
            </LinearLayout>

        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        style="@style/style_match_wrap"
        android:layout_height="20dp"
        android:background="@color/clash"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/ballgame_left_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="1dp"
            android:text="@string/matchs"
            android:textColor="@color/white"
            android:textSize="12sp" />
        <View
            android:layout_width="0.2dp"
            android:layout_height="match_parent"
            android:background="@color/green_white_thick_line" />

        <View
            android:layout_width="0.2dp"
            android:layout_height="match_parent"
            android:background="@color/grey_dialog_background" />

        <nanyang.com.dig88.LinkedViewPager.ViewPager
            android:id="@+id/ballgame_center_vp"
            android:layout_width="139dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            >

        </nanyang.com.dig88.LinkedViewPager.ViewPager>
        <View
            android:layout_width="0.2dp"
            android:layout_height="match_parent"
            android:background="@color/green_white_thick_line" />

        <View
            android:layout_width="0.2dp"
            android:layout_height="match_parent"
            android:background="@color/grey_dialog_background" />
        <TextView
            android:id="@+id/ballgame_mark_tv"
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/other"
            android:textColor="@color/white"
            android:textSize="9sp" />
    </LinearLayout>
</LinearLayout>