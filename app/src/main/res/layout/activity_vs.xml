<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <include layout="@layout/toolbar_layout"/>

    <FrameLayout
        style="@style/style_match_wrap"
       android:background="@color/red_toolbar_bottom">
        <TextView
            android:id="@+id/vs_time_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/vs_time"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:singleLine="true"
            android:text="11/12  |  23:20"
            android:textColor="@color/white"
            android:textSize="12sp"/>
    </FrameLayout>
    <gaming178.com.mylibrary.myview.indicator.PagerSlidingTabStrip
        android:id="@+id/ballgame_tabs_pstabs"
        android:layout_width="match_parent"
        android:layout_height="25dip"
        android:background="@color/blue_table"
        android:visibility="gone"
        app:indicatorColor="@color/white"
        app:indicatorHeight="0dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:src="@mipmap/arrow_left_green" />
        <TextView
            android:id="@+id/tv_choice"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/vs_3_choice"
            android:gravity="center"
            android:textColor="@color/sports_match" />
        <ImageView
            android:id="@+id/img_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:src="@mipmap/arrow_right_green" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_introduce"
        android:layout_width="match_parent"
        android:layout_height="26dp"
        android:background="@color/vs_1x2_bg"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/encounter"
            android:textColor="@color/white"
            android:textSize="12sp" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/full_time"
            android:textColor="@color/white"
            android:textSize="12sp" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/half_time"
            android:textColor="@color/white"
            android:textSize="12sp" />
    </LinearLayout>
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/ballgame_pager_vp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
       />
    <View
        style="@style/line_horizontal_grey1"

        android:background="@color/black_grey"/>
    <LinearLayout
        android:id="@+id/ballgame_bottom_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/grey_dialog_background"
        android:orientation="horizontal">

        <TextView
            style="@style/rb_main_style"
            android:background="@null"
            android:clickable="true"
            android:drawableTop="@drawable/arrow_back_yellow"
            android:drawablePadding="2dp"
            android:onClick="clickBack"
            android:text="@string/back"
            android:textColor="@color/grey_dark"
            android:textSize="10sp" />

        <TextView
            style="@style/rb_main_style"
            android:background="@null"
            android:clickable="true"
            android:drawableTop="@mipmap/oval_black_p_black"
            android:drawablePadding="2dp"
            android:onClick="clickNoSettled"
            android:text="@string/not_settled"
            android:textColor="@color/grey_dark"
            android:textSize="10sp" />

        <TextView
            style="@style/rb_main_style"
            android:background="@null"
            android:clickable="true"
            android:drawableTop="@mipmap/oval_black_hook_balck"
            android:drawablePadding="2dp"
            android:onClick="clickSettled"
            android:text="@string/settled"
            android:textColor="@color/grey_dark"
            android:textSize="10sp" />
    </LinearLayout>
</LinearLayout>