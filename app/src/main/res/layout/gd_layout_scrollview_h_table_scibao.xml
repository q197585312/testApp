<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="@color/brown_dark_bg"
    android:padding="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/green_table_color_new"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="3dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/gd__tv_table_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="BM1"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/gd__tv_timer"
            android:layout_width="18dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:background="@color/timer_color"
            android:gravity="center"
            android:singleLine="true"
            android:text="0"
            android:textColor="@color/yellow_brown_a3721a"
            android:textSize="11sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/gd_img_close_bet"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:background="@mipmap/gd_close_bet_table"></ImageView>

        <TextView
            android:id="@+id/tv_table_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/gd__text_shoe_game_number"
            style="@style/text_wrap_black12"
            android:layout_width="60dp"
            android:layout_marginLeft="5dp"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:background="@drawable/gd_rectangle_p_shape"
            android:orientation="horizontal"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:visibility="gone">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/gd_E"
                android:textColor="@color/white"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/gd__text_even"
                style="@style/text_wrap_black12"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@drawable/gd_rectangle_p_shape"
            android:orientation="horizontal"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:visibility="gone">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/gd_S"
                android:textColor="@color/white"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/gd__text_small"
                style="@style/text_wrap_black12"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@drawable/gd_rectangle_tie_shape"
            android:orientation="horizontal"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:visibility="gone">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/gd_T"
                android:textColor="@color/white"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/gd__text_waidic"
                style="@style/text_wrap_black12"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@drawable/gd_rectangle_b_shape"
            android:orientation="horizontal"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:visibility="gone">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/gd_B"
                android:textColor="@color/white"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/gd__text_big"
                style="@style/text_wrap_black12"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@drawable/gd_rectangle_b_shape"
            android:orientation="horizontal"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:visibility="gone">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/gd_O"
                android:textColor="@color/white"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/gd__text_odd"
                style="@style/text_wrap_black12"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="10sp" />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"></View>

        <ImageView
            android:id="@+id/img_table"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:background="@mipmap/gd_table_p"></ImageView>

    </LinearLayout>

    <gaming178.com.casinogame.Control.ParentClickHorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/gd__layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"></LinearLayout>

    </gaming178.com.casinogame.Control.ParentClickHorizontalScrollView>

    <include layout="@layout/gd_include_sicbo_bet_table_table_change"></include>

    <include
        layout="@layout/gd_table_close_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"></include>

    <include
        layout="@layout/gd_you_here_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"></include>

    <include layout="@layout/include_table_bet_hint"></include>
</FrameLayout>