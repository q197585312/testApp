<?xml version="1.0" encoding="utf-8"?><!--  android:background="@drawable/rectangle_green_green_black_corner_hall_selector_"-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gd_rl_parent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="8dp"
    android:background="@mipmap/home_other_bg"
    android:paddingBottom="3dp">

    <ImageView
        android:id="@+id/gd__hall_game_pic_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true" />

    <TextView
        android:id="@+id/gd__hall_game_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textAllCaps="true"
        android:textColor="@color/home_no_select_color"
        android:textSize="11sp" />

</RelativeLayout>