<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/base_bg"
    android:orientation="vertical">

    <include layout="@layout/toolbar_layout" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/normal_white_bg"
                android:orientation="vertical"
                android:padding="13dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dip"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center|left"
                        android:text="@string/Affiliate_Account_Name"
                        android:textColor="@color/black"
                        android:textSize="15dip" />

                    <TextView
                        android:id="@+id/tv_name1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:drawableRight="@mipmap/drop"
                        android:gravity="center"
                        android:text="A"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tv_name2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="8dp"
                        android:layout_weight="1"
                        android:drawableRight="@mipmap/drop"
                        android:gravity="center"
                        android:text="A"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tv_name3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="8dp"
                        android:layout_weight="1"
                        android:drawableRight="@mipmap/drop"
                        android:gravity="center"
                        android:text="A"
                        android:textColor="@color/black" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#DFE2EE"></View>

                <EditText
                    android:id="@+id/edt_password"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dip"
                    android:background="@null"
                    android:hint="@string/mima"
                    android:maxLines="1"
                    android:padding="8dp"
                    android:password="true"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="#c3c3c8"
                    android:textSize="15dip" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#DFE2EE"></View>

                <EditText
                    android:id="@+id/edt_password_confirm"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dip"
                    android:background="@null"
                    android:hint="@string/zhucequemi"
                    android:maxLines="1"
                    android:padding="8dp"
                    android:password="true"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="#c3c3c8"
                    android:textSize="15dip" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#DFE2EE"></View>

                <TextView
                    android:id="@+id/tv_choice"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dip"
                    android:drawableRight="@mipmap/drop"
                    android:gravity="center|left"
                    android:maxLines="1"
                    android:padding="8dp"
                    android:singleLine="true"
                    android:text="@string/zhucexuan"
                    android:textColor="@color/black"
                    android:textSize="15dip" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#DFE2EE"></View>

                <TextView
                    android:id="@+id/tv_currency"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dip"
                    android:drawableRight="@mipmap/drop"
                    android:gravity="center|left"
                    android:padding="8dp"
                    android:text="@string/zhucebibie"
                    android:textColor="@color/black"
                    android:textSize="15dip" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#DFE2EE"></View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dip"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/tv_http"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableRight="@mipmap/drop"
                        android:gravity="center|left"
                        android:text="https "
                        android:textColor="@color/black"
                        android:textSize="15dip" />

                    <TextView
                        android:id="@+id/tv_domain"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:drawableRight="@mipmap/drop"
                        android:gravity="center_vertical"
                        android:text="Domain"
                        android:textColor="@color/black" />

                </LinearLayout>

                <EditText
                    android:id="@+id/edt_email"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dip"
                    android:background="@null"
                    android:hint="@string/dianziyoujian"
                    android:maxLines="1"
                    android:padding="8dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="#c3c3c8"
                    android:textSize="15dip" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#DFE2EE"></View>

                <EditText
                    android:id="@+id/edt_tel"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dip"
                    android:background="@null"
                    android:hint="@string/regphone"
                    android:inputType="number"
                    android:maxLines="1"
                    android:padding="8dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="#c3c3c8"
                    android:textSize="15dip" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#DFE2EE"></View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dip"
                    android:layout_weight="2"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/edt_code"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:background="@null"
                        android:hint="@string/yanzhengma"
                        android:inputType="number"
                        android:maxLines="1"
                        android:padding="8dp"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textColorHint="#c3c3c8"
                        android:textSize="15dip" />

                    <TextView
                        android:id="@+id/tv_code"
                        android:layout_width="0dip"
                        android:layout_height="32dp"
                        android:layout_marginLeft="5dip"
                        android:layout_weight="0.5"
                        android:background="@drawable/dig_conor_yanzhengma_shape"
                        android:gravity="center"
                        android:text="15777"
                        android:textColor="#6B7CB4"
                        android:textSize="17dip"
                        android:textStyle="bold" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#DFE2EE"></View>
            </LinearLayout>

            <Button
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="@drawable/home_login_bg"
                android:gravity="center"
                android:text="@string/submit"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="15dip" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>