    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_normal"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/lottery_4d_choice_type"
            android:gravity="center"
            android:text="@string/number_4d"
            android:textColor="@color/selector_lottery_4d_type"
            android:textSize="12sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/lottery_4d_choice_type"
            android:gravity="center"
            android:text="@string/big"
            android:textColor="@color/selector_lottery_4d_type"
            android:textSize="12sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/lottery_4d_choice_type"
            android:gravity="center"
            android:text="@string/small"
            android:textColor="@color/selector_lottery_4d_type"
            android:textSize="12sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/lottery_4d_choice_type"
            android:gravity="center"
            android:text="@string/period"
            android:textColor="@color/selector_lottery_4d_type"
            android:textSize="12sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/lottery_4d_choice_type"
            android:gravity="center"
            android:text="@string/Bet_Type"
            android:textColor="@color/selector_lottery_4d_type"
            android:textSize="12sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/lottery_4d_choice_type"
            android:gravity="center"
            android:text="@string/Amount"
            android:textColor="@color/selector_lottery_4d_type"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_special"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/lottery_4d_choice_type"
            android:gravity="center"
            android:text="@string/number_4d"
            android:textColor="@color/selector_lottery_4d_type"
            android:textSize="12sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/lottery_4d_choice_type"
            android:gravity="center"
            android:text="@string/big"
            android:textColor="@color/selector_lottery_4d_type"
            android:textSize="12sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/lottery_4d_choice_type"
            android:gravity="center"
            android:text="@string/small"
            android:textColor="@color/selector_lottery_4d_type"
            android:textSize="12sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/lottery_4d_choice_type"
            android:gravity="center"
            android:text="A"
            android:textColor="@color/selector_lottery_4d_type"
            android:textSize="12sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/lottery_4d_choice_type"
            android:gravity="center"
            android:text="ABC"
            android:textColor="@color/selector_lottery_4d_type"
            android:textSize="12sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/lottery_4d_choice_type"
            android:gravity="center"
            android:text="@string/Bet_Type"
            android:textColor="@color/selector_lottery_4d_type"
            android:textSize="12sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/lottery_4d_choice_type"
            android:gravity="center"
            android:text="@string/Amount"
            android:textColor="@color/selector_lottery_4d_type"
            android:textSize="12sp" />
    </LinearLayout>

    <ListView
        android:id="@+id/lv_bet"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:descendantFocusability="beforeDescendants"
        android:divider="@null"></ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_sure"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/lottery_4d_bg_sure"
            android:gravity="center"
            android:text="@string/sure"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:layout_weight="1"
            android:background="@drawable/lottery_4d_bg_cancel"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:layout_weight="3"
            android:background="@drawable/lottery_4d_bg_money">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/write_money"
                android:textColor="@color/selector_lottery_4d_type"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_amount"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:paddingRight="5dp"
                android:text="0.00"
                android:textColor="@color/selector_lottery_4d_type"
                android:textSize="13sp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>