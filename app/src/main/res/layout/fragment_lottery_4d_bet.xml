            android:gravity="center"
            android:visibility="gone"
            misc:img="@mipmap/imgpool_7"></nanyang.com.dig88.Lottery4D.view.RadioImageButton>

        <nanyang.com.dig88.Lottery4D.view.RadioImageButton
            android:id="@+id/rb_8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/lottery_4d_choice_type"
            android:button="@null"
            android:gravity="center"
            android:visibility="gone"
            misc:img="@mipmap/imgpool_8"></nanyang.com.dig88.Lottery4D.view.RadioImageButton>
    </RadioGroup>

    <LinearLayout
        android:id="@+id/ll_special_switch"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@drawable/lottery_4d_choice_type"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="3dp"
        android:paddingBottom="3dp">

        <LinearLayout
            android:id="@+id/ll_special_type_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <CheckBox
                android:id="@+id/cb_special_type_1"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/circle_checkbox_is_select"
                android:button="@null"
                android:clickable="false" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/imgpool_1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_special_type_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <CheckBox
                android:id="@+id/cb_special_type_2"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/circle_checkbox_is_select"
                android:button="@null"
                android:clickable="false" />

            <ImageView
                android:layout_width="wrap_content"
