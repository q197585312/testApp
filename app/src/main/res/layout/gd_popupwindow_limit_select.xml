<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/trans_grey"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gd_rectangle_brown_top_corner5"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/gd__tv_table_game_number"
            style="@style/text_wrap_bold_black14"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="@color/white" />

        <TextView
            style="@style/text_match_grey18"

            android:gravity="center"
            android:padding="5dp"
            android:text="@string/LIMIT"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/gd__pop_close_iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="10dp"
            android:src="@mipmap/gd_white_close" />
    </FrameLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/gd__base_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:divider="@null"
        android:gravity="bottom"
        android:background="@drawable/gd_rectangle_white_bottom_corner5"
        android:scrollbars="none"/>

</LinearLayout>
