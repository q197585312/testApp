<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:orientation="vertical"
    android:paddingLeft="8dp"
    android:paddingRight="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/normal_white_bg"
        android:orientation="vertical"
        android:paddingBottom="20dp">

        <EditText
            android:id="@+id/edt_recharge_card_num"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:hint="@string/recharge_card_num"
            android:paddingLeft="10dip"
            android:textColor="@color/gray"
            android:textSize="13dip" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DFE2EE"></View>

        <EditText
            android:id="@+id/edt_recharge_card_passwrod"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_marginTop="15dp"
            android:background="@null"
            android:hint="@string/recharge_card_passwrod"
            android:paddingLeft="10dip"
            android:textColor="@color/gray"
            android:textSize="13dip" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DFE2EE"></View>

    </LinearLayout>

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_marginTop="20dip"
        android:background="@drawable/home_login_bg"
        android:gravity="center"
        android:text="@string/queding"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="15dip" />

</LinearLayout>