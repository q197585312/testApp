<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gd__ll_baccarat_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/gd__ll_road_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/gd__baccarat_grid_parent_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">

                <HorizontalScrollView
                    android:id="@+id/gd__layout1"
                    android:layout_width="99dp"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">

                    <include layout="@layout/gd_include_baccarat_grid_layout1" />
                </HorizontalScrollView>

                <LinearLayout
                    android:id="@+id/gd__ll_big_road_parent2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="none">

                        <include layout="@layout/gd_include_baccarat_grid_layout2" />
                    </HorizontalScrollView>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/gd__tv_banker_road"
                        style="@style/text_match_blue12"
                        android:gravity="center"
                        android:text="B"
                        android:textColor="@color/red" />

                    <TextView

                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:background="@drawable/gd_oval_red_solid_not"
                        android:gravity="center" />

                    <TextView
                        style="@style/text_match_blue12"
                        android:gravity="center"
                        android:text="/"
                        android:textColor="@color/blue"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/gd_oval_red_solid"
                        android:gravity="center" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/gd__tv_player_road"
                        style="@style/text_match_blue12"
                        android:gravity="center"
                        android:text="P"
                        android:textColor="@color/blue" />

                    <TextView

                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:background="@drawable/gd_oval_blue_solid_not"
                        android:gravity="center" />

                    <TextView
                        style="@style/text_match_blue12"
                        android:gravity="center"
                        android:text="/"
                        android:textColor="@color/red_title"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/gd_oval_blue_solid"
                        android:gravity="center"
                        android:text=" " />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/gd__ll_small_road_parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:orientation="horizontal"
                android:visibility="visible">

                <HorizontalScrollView
                    android:id="@+id/gd__hsv_small_road_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:scrollbars="none">

                    <include layout="@layout/gd_include_baccarat_grid_layout3" />
                </HorizontalScrollView>

                <View style="@style/line_vertical_grey1" />

                <HorizontalScrollView
                    android:id="@+id/gd__hsv_small_road_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_weight="1"
                    android:scrollbars="none">

                    <include
                        android:id="@+id/gd__baccarat_gridlayout4"
                        layout="@layout/gd_include_baccarat_grid_layout3" />
                </HorizontalScrollView>

                <View style="@style/line_vertical_grey1" />

                <HorizontalScrollView
                    android:id="@+id/gd__hsv_small_road_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_weight="1"
                    android:scrollbars="none">

                    <include
                        android:id="@+id/gd__baccarat_gridlayout5"
                        layout="@layout/gd_include_baccarat_grid_layout3" />
                </HorizontalScrollView>

                <View style="@style/line_vertical_grey1" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="40px"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/gd__ll_banker_ask"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/red"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/gd__tv_ask1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:ems="1"
                        android:gravity="center"
                        android:text="@string/banker1"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/gd__tv_ask1_name"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:ems="1"
                        android:gravity="center"
                        android:text="@string/ask"
                        android:textColor="@color/white"
                        android:textSize="12sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="14px"
                    android:src="@mipmap/gd_banker_ask"></ImageView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/gd__ll_player_ask"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="1px"
                android:layout_weight="1"
                android:background="@color/blue_height"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/gd__tv_ask2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:ems="1"
                        android:gravity="center"
                        android:text="@string/player1"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/gd__tv_ask2_name"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:ems="1"
                        android:gravity="center"
                        android:text="@string/ask"
                        android:textColor="@color/white"
                        android:textSize="12sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="14px"
                    android:src="@mipmap/gd_player_ask"></ImageView>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey_background"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/gd__text_shoe_game_number"
            style="@style/text_wrap_black12"
            android:layout_width="60dp"
            android:layout_marginLeft="5dp"
            android:text="0-0"
            android:textColor="@color/grey_dark_word"
            android:visibility="gone" />


        <LinearLayout
            android:layout_width="42dp"
            android:layout_height="25dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/gd_rectangle_b_shape"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <TextView
                android:id="@+id/gd__tv_banker"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/banker_m"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/gd__text_banker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="42dp"
            android:layout_height="25dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/gd_rectangle_p_shape"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <TextView
                android:id="@+id/gd__tv_player"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/player_m"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/gd__text_player"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="42dp"
            android:layout_height="25dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/gd_rectangle_tie_shape"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <TextView
                android:id="@+id/gd__tv_tie"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/tie1"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/gd__text_tie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/gd__ll_bp"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/gd_rectangle_bp_shape"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <TextView
                android:id="@+id/gd__tv_banker_pair"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/BP"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/gd__text_bp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/gd__ll_pp"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/gd_rectangle_pp_shape"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <TextView
                android:id="@+id/gd__tv_player_pair"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/PP"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/gd__text_pp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="42dp"
            android:layout_height="25dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/gd_rectangle_total_shape"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <TextView
                android:id="@+id/gd__tv_total"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/total_m"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/gd__text_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:textStyle="bold" />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"></View>

        <RelativeLayout
            android:id="@+id/gd__rl_good_road"
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:background="@mipmap/gd_good_road"
            android:paddingLeft="2dp">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/gd_good" />


            <TextView
                android:id="@+id/gd__tv_good_road_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="@string/good_road"
                android:textColor="@color/black"
                android:textSize="9sp" />

            <TextView
                android:id="@+id/gd__tv_good_road_count"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/gd_circle_b_shape"
                android:gravity="center"
                android:text="9"
                android:textColor="@color/white"
                android:textSize="8sp"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
