<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_4d"
    android:orientation="vertical">

    <include layout="@layout/toolbar_layout"></include>

    <TextView
        android:id="@+id/tv_animation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:textColor="#ED0B09"
        android:textSize="12sp" />

    <RadioGroup
        android:id="@+id/rg_choice_type"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <RadioButton
            android:id="@+id/rb_bet"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/lottery_4d_choice_type"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:text="@string/Bet"
            android:textColor="@color/selector_lottery_4d_type"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/rb_bet_list"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/lottery_4d_choice_type"
            android:button="@null"
            android:gravity="center"
            android:text="@string/bet_list"
            android:textColor="@color/selector_lottery_4d_type"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/rb_result"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/lottery_4d_choice_type"
            android:button="@null"
            android:gravity="center"
            android:text="@string/Result"
            android:textColor="@color/selector_lottery_4d_type"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/rb_prize"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/lottery_4d_choice_type"
            android:button="@null"
            android:gravity="center"
            android:text="@string/prize"
            android:textColor="@color/selector_lottery_4d_type"
            android:textSize="12sp" />
    </RadioGroup>

    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"></FrameLayout>

</LinearLayout>