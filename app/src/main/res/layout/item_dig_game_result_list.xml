<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:orientation="horizontal"
        android:weightSum="6"
        >
        <TextView
            android:id="@+id/tv_bianhao"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="11dip"
            />
        <TextView
            android:id="@+id/tv_youxi_type"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="彩票(印尼规则)"
            android:textColor="@color/black"
            android:textSize="11dip"
            />
        <TextView
            android:id="@+id/tv_youxi_name"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="SINGAPORE"
            android:textColor="@color/black"
            android:textSize="11dip"
            />
        <TextView
            android:id="@+id/tv_youxiid"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="20151210001"
            android:textColor="@color/black"
            android:textSize="11dip"
            />

        <TextView
            android:id="@+id/tv_kaijiangtime"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1.3"
            android:gravity="center"
            android:text="2015-11-01 18:00:00"
            android:textColor="@color/black"
            android:textSize="11dip"
            />
        <TextView
            android:id="@+id/tv_result"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:gravity="center"
            android:text="01-15-30-23-16-18-20"
            android:textColor="@color/black"
            android:textSize="11dip"
            />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dip"
        android:background="@color/gray"
        />
</LinearLayout>