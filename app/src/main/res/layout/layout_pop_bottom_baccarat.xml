<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <FrameLayout
        android:onClick="parentClick"
        android:layout_width="match_parent"
        android:layout_height="250px"/>
    <FrameLayout
        android:id="@+id/fl_poker_parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/fl_poker_bottom_parent"
            android:layout_width="450px"
            android:layout_height="280px"
            android:layout_marginTop="150px"
            android:layout_gravity="center_horizontal"
            android:visibility="gone">

            <FrameLayout
                android:layout_width="440px"
                android:layout_height="266px"
                android:layout_gravity="bottom|center_horizontal"
                android:background="@color/trans_black_dark"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <View
                        android:id="@+id/v_background_player"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/rectangle_trans_stroke_yellow_corner4_right" />

                    <View
                        android:id="@+id/v_background_banker"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/rectangle_trans_stroke_yellow_corner4_right"
                        android:visibility="gone" />
                </LinearLayout>


            </FrameLayout>

            <TextView
                android:id="@+id/tv_poker_timer"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/oval_black_solid"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/red_background"
                android:textSize="22sp"
                android:textStyle="bold"
                android:visibility="gone" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/ll_poker_parent_a"
            android:layout_width="450px"
            android:layout_height="490px"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:visibility="visible">


                <ImageView
                    android:id="@+id/iv_poker_player1_a"
                    android:layout_width="42px"
                    android:layout_height="52px"
                    android:layout_marginLeft="15px"
                    android:layout_marginTop="355px"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@mipmap/pk_1"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_poker_player2_a"
                    android:layout_width="42px"
                    android:layout_height="52px"
                    android:layout_marginLeft="75px"
                    android:layout_marginTop="355px"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@mipmap/pk_1"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_poker_player1_a1"
                    android:layout_width="74px"
                    android:layout_height="80px"
                    android:layout_marginLeft="37px"
                    android:layout_marginTop="295px"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@mipmap/pk_1"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/iv_poker_player2_a1"
                    android:layout_width="74px"
                    android:layout_height="80px"
                    android:layout_marginLeft="131px"
                    android:layout_marginTop="295px"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@mipmap/pk_1"
                    android:visibility="gone"  />



                <ImageView

                    android:id="@+id/iv_poker_player3_a"
                    android:layout_width="56px"
                    android:layout_height="40px"
                    android:layout_marginLeft="36px"
                    android:layout_marginTop="420px"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@mipmap/pk_1"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_poker_player3_a1"
                    android:layout_width="100px"
                    android:layout_height="60px"
                    android:layout_marginLeft="70px"
                    android:layout_gravity="left|bottom"
                    android:adjustViewBounds="true"
                    android:layout_marginBottom="33px"
                    android:scaleType="fitXY"
                    android:src="@mipmap/pk_1"
                    android:visibility="gone"/>

            </FrameLayout>

            <FrameLayout
                android:layout_width="263px"
                android:layout_height="match_parent"
                android:layout_gravity="right"
               >




                <ImageView
                    android:id="@+id/iv_poker_banker1_a"
                    android:layout_width="42px"
                    android:layout_height="52px"
                    android:layout_gravity="right"
                    android:layout_marginRight="74px"
                    android:layout_marginTop="355px"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@mipmap/pk_1"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_poker_banker2_a"
                    android:layout_width="42px"
                    android:layout_height="52px"
                    android:layout_gravity="right"
                    android:layout_marginRight="14px"
                    android:layout_marginTop="355px"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@mipmap/pk_1"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_poker_banker1_a1"
                    android:layout_width="74px"
                    android:layout_height="80px"
                    android:layout_gravity="right"
                    android:layout_marginRight="131px"
                    android:layout_marginTop="295px"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@mipmap/pk_1"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_poker_banker2_a1"
                    android:layout_width="74px"
                    android:layout_height="80px"
                    android:layout_gravity="right"
                    android:layout_marginRight="37px"
                    android:layout_marginTop="295px"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@mipmap/pk_1"
                    android:visibility="gone"/>


                <ImageView
                    android:id="@+id/iv_poker_banker3_a1"
                    android:layout_width="100px"
                    android:layout_height="60px"
                    android:layout_gravity="right|bottom"
                    android:layout_marginRight="70px"
                    android:layout_marginBottom="33px"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@mipmap/pk_1"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_poker_banker3_a"
                    android:layout_width="56px"
                    android:layout_height="40px"
                    android:layout_gravity="right"
                    android:layout_marginRight="45px"
                    android:layout_marginTop="420px"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@mipmap/pk_1"
                    android:visibility="gone" />

            </FrameLayout>
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="275px"
            android:layout_marginTop="130px"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">
        <TextView
            android:background="@mipmap/poker_bg_small"
            android:id="@+id/tv_bottom_panel_left_a"
            android:layout_width="24px"
            android:layout_height="32px"
            android:textSize="21px"
            android:layout_marginLeft="2px"
            android:visibility="gone"

            android:layout_gravity="left"
            android:layout_marginTop="190px"
            android:gravity="center"
            android:textColor="#0000FF"
            app:layout_auto_basewidth="height" />

            <TextView
                android:background="@mipmap/poker_bg_small"
                android:visibility="gone"
                android:id="@+id/tv_bottom_panel_left_b"
                android:layout_width="24px"
                android:layout_height="32px"
                android:textSize="21px"
                android:layout_marginLeft="2px"
                android:layout_gravity="left"
                android:layout_marginTop="190px"
                android:gravity="center"
                android:textColor="#0000FF"
                app:layout_auto_basewidth="height"  />
            <TextView
                android:background="@mipmap/poker_bg_small"
                android:visibility="gone"
                android:id="@+id/tv_bottom_panel_right_b"
                android:layout_marginRight="2px"
                android:layout_width="24px"
                android:layout_height="32px"
                android:textSize="21px"
                android:layout_gravity="right"
                android:layout_marginTop="190px"
                android:gravity="center"
                android:textColor="@color/red"
                app:layout_auto_basewidth="height"/>

            <TextView
                android:background="@mipmap/poker_bg_small"
                android:id="@+id/tv_bottom_panel_right_a"
                android:layout_marginRight="2px"
                android:visibility="gone"
                android:layout_width="24px"
                android:layout_height="32px"
                android:textSize="21px"
                android:layout_gravity="right"
                android:layout_marginTop="190px"
                android:gravity="center"
                android:textColor="@color/red"
                app:layout_auto_basewidth="height" />
        </FrameLayout>
        <LinearLayout
            android:id="@+id/ll_poker_pw"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:visibility="visible">

            <FrameLayout
                android:id="@+id/fl_player_pw_parent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="3dp"
                android:gravity="center_vertical">
                <FrameLayout
                    android:layout_width="30dp"
                    android:layout_height="260px"
                    android:layout_gravity="left|bottom"
                    android:layout_marginLeft="110px">

                    <ImageView
                        android:id="@+id/img_left_player_rotate"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="left|center_vertical"
                        android:src="@mipmap/img_rotate"
                        android:visibility="gone" />
                </FrameLayout>

                <gaming178.com.casinogame.Control.PageWidgetT
                    android:id="@+id/page_widget_poker_player1"
                    android:layout_width="560px"
                    android:layout_height="match_parent"
                    android:visibility="visible" />

                <gaming178.com.casinogame.Control.PageWidgetT
                    android:id="@+id/page_widget_poker_player2"
                    android:layout_width="560px"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:visibility="visible" />

                <gaming178.com.casinogame.Control.PageWidgetT
                    android:id="@+id/page_widget_poker_player3"
                    android:layout_width="560px"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:visibility="visible" />
                <FrameLayout
                    android:layout_width="30dp"
                    android:layout_height="260px"
                    android:layout_gravity="right|bottom"
                    android:layout_marginRight="110px">

                    <ImageView
                        android:id="@+id/img_right_player_rotate"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="left|center_vertical"
                        android:src="@mipmap/img_rotate"
                        android:visibility="gone" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="30dp"
                    android:layout_height="260px"
                    android:layout_gravity="right|bottom"
                    android:layout_marginRight="110px">

                    <ImageView
                        android:id="@+id/img_center_player_rotate"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="left|center_vertical"
                        android:src="@mipmap/img_rotate"
                        android:visibility="gone" />
                </FrameLayout>
            </FrameLayout>


            <FrameLayout
                android:id="@+id/fl_banker_pw_parent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"

                android:gravity="center_vertical">
                <FrameLayout
                    android:layout_width="30dp"
                    android:layout_height="260px"
                    android:layout_gravity="left|bottom"
                    android:layout_marginLeft="110px">

                    <ImageView
                        android:id="@+id/img_left_banker_rotate"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="left|center_vertical"
                        android:src="@mipmap/img_rotate"
                        android:visibility="gone" />
                </FrameLayout>

                <gaming178.com.casinogame.Control.PageWidgetT
                    android:id="@+id/page_widget_poker_banker1"
                    android:layout_width="560px"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="3dp"
                    android:visibility="visible" />

                <gaming178.com.casinogame.Control.PageWidgetT
                    android:id="@+id/page_widget_poker_banker2"
                    android:layout_width="560px"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:visibility="visible" />

                <gaming178.com.casinogame.Control.PageWidgetT
                    android:id="@+id/page_widget_poker_banker3"
                    android:layout_width="560px"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:visibility="visible" />
                <FrameLayout
                    android:layout_width="30dp"
                    android:layout_height="260px"
                    android:layout_gravity="right|bottom"
                    android:layout_marginRight="110px">

                    <ImageView
                        android:id="@+id/img_right_banker_rotate"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="left|center_vertical"
                        android:src="@mipmap/img_rotate"
                        android:visibility="gone" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="30dp"
                    android:layout_height="260px"
                    android:layout_gravity="right|bottom"
                    android:layout_marginRight="110px">

                    <ImageView
                        android:id="@+id/img_center_banker_rotate"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="left|center_vertical"
                        android:src="@mipmap/img_rotate"
                        android:visibility="gone" />
                </FrameLayout>
            </FrameLayout>

        </LinearLayout>

    </FrameLayout>

</FrameLayout>