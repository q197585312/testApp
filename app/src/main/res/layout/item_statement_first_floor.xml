<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/statement_first_key_ll"
        style="@style/style_match_wrap"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView

            style="@style/text_match_black10"
            android:layout_width="110dp"
            android:gravity="center"
            android:paddingLeft="2dp"
            android:paddingTop="5dp"

            android:paddingBottom="5dp"
            android:singleLine="true"
            android:text="@string/date"
            android:textStyle="bold" />
        <View
            android:layout_width="0.4dp"
            android:layout_height="match_parent"
            android:background="@color/green_white_thick_line" />

        <View
            android:layout_width="0.4dp"
            android:layout_height="match_parent"
            android:background="@color/white" />
        <TextView

            style="@style/text_match_black10"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="2dp"
            android:singleLine="true"
            android:text="@string/betting_state"
            android:textStyle="bold" />

        <View
            android:layout_width="0.4dp"
            android:layout_height="match_parent"
            android:background="@color/green_white_thick_line" />

        <View
            android:layout_width="0.4dp"
            android:layout_height="match_parent"
            android:background="@color/white" />
        <TextView
            style="@style/text_match_black10"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="2dp"
            android:singleLine="true"
            android:text="@string/amount_of_effective"
            android:textStyle="bold" />
        <View
            android:layout_width="0.4dp"
            android:layout_height="match_parent"
            android:background="@color/green_white_thick_line" />

        <View
            android:layout_width="0.4dp"
            android:layout_height="match_parent"
            android:background="@color/white" />
        <TextView

            style="@style/text_match_black10"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/win_or_lose"
            android:textStyle="bold" />
        <View
            android:layout_width="0.4dp"
            android:layout_height="match_parent"
            android:background="@color/green_white_thick_line" />

        <View
            android:layout_width="0.4dp"
            android:layout_height="match_parent"
            android:background="@color/white" />

        <TextView
            style="@style/text_match_black10"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="2dp"

            android:singleLine="true"
            android:text="@string/commission"
            android:textStyle="bold" />
        <View
            android:layout_width="0.4dp"
            android:layout_height="match_parent"
            android:background="@color/green_white_thick_line" />

        <View
            android:layout_width="0.4dp"
            android:layout_height="match_parent"
            android:background="@color/white" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:background="@color/green_white_thick_line" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:background="@color/white" />
    <LinearLayout
        style="@style/style_match_wrap"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/statement_first_value_data_tv"
            style="@style/text_match_black10"
            android:layout_width="110dp"
            android:gravity="center"
            android:paddingLeft="2dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:singleLine="true"
            android:text="@string/date" />
        <View
            android:layout_width="0.4dp"
            android:layout_height="match_parent"
            android:background="@color/green_white_thick_line" />

        <View
            android:layout_width="0.4dp"
            android:layout_height="match_parent"
            android:background="@color/white" />
        <TextView
            android:id="@+id/statement_first_value_betting_state_tv"
            style="@style/text_wrap_black10"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="2dp"
            android:singleLine="true"
            android:text="@string/betting_state" />

        <View
            android:layout_width="0.4dp"
            android:layout_height="match_parent"
            android:background="@color/green_white_thick_line" />

        <View
            android:layout_width="0.4dp"
            android:layout_height="match_parent"
            android:background="@color/white" />
        <TextView
            android:id="@+id/statement_first_value_effect_amount_tv"
            style="@style/text_wrap_black10"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="2dp"
            android:singleLine="true"
            android:text="@string/amount_of_effective" />
        <View
            android:layout_width="0.4dp"
            android:layout_height="match_parent"
            android:background="@color/green_white_thick_line" />

        <View
            android:layout_width="0.4dp"
            android:layout_height="match_parent"
            android:background="@color/white" />
        <TextView
            android:id="@+id/statement_first_value_win_lose_tv"
            style="@style/text_wrap_black10"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/win_or_lose" />
        <View
            android:layout_width="0.4dp"
            android:layout_height="match_parent"
            android:background="@color/green_white_thick_line" />

        <View
            android:layout_width="0.4dp"
            android:layout_height="match_parent"
            android:background="@color/white" />

        <TextView
            android:id="@+id/statement_first_value_commission_tv"
            style="@style/text_wrap_black10"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"

            android:padding="2dp"
            android:singleLine="true"
            android:text="@string/commission" />
        <View
            android:layout_width="0.4dp"
            android:layout_height="match_parent"
            android:background="@color/green_white_thick_line" />

        <View
            android:layout_width="0.4dp"
            android:layout_height="match_parent"
            android:background="@color/white" />
    </LinearLayout>
    <View
        android:id="@+id/footer_line1"
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:background="@color/green_white_thick_line"
        android:visibility="gone" />

    <View
        android:id="@+id/footer_line2"
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:background="@color/white"
        android:visibility="gone" />
</LinearLayout>