<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gd_rectangle_grey_corner5_pop"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginTop="8px"
        android:layout_marginLeft="6px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="60px"
                android:layout_height="wrap_content"
                android:text="@string/player1"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/gd__tv_player_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="60px"
                android:layout_height="wrap_content"
                android:text="@string/PP1"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/gd__tv_player_pair_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="60px"
                android:layout_height="wrap_content"
                android:text="@string/tie1"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/gd__tv_tie_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="60px"
                android:layout_height="wrap_content"
                android:text="@string/BP1"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/gd__tv_banker_pair_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="60px"
                android:layout_height="wrap_content"
                android:text="@string/banker1"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/gd__tv_banker_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>