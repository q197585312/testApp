<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/toolbar_layout"
        android:visibility="gone" />

    <Button
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:onClick="clickStop"
        android:text="stop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:text="start">

        <Button
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:onClick="clickRun"
            android:text="start" />

        <FrameLayout
            android:layout_width="150dp"
            android:layout_height="150dp">

            <xs.com.mylibrary.myview.GroupView.MyViewGroup
                android:id="@+id/my_group"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/oval_white_graystroke_radius0">

            </xs.com.mylibrary.myview.GroupView.MyViewGroup>

            <View
                android:id="@+id/my_line"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="@color/black" />
            <TextView
                android:id="@+id/selected_ball_tv"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginTop="20dp"
                android:background="@drawable/oval_white_graystroke_radius0" />
        </FrameLayout>



    </LinearLayout>

</LinearLayout>