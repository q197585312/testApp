<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:gravity="center"
    android:padding="2dp"
    android:background="@drawable/gd_rectangle_white_stroke_yellow"
    android:layout_height="wrap_content">
    <ImageView
        android:background="@drawable/gd_rectangle_trans_black"
        android:id="@+id/gd__iv_dice_1"
        android:src="@mipmap/gd_dice1"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content" />
    <ImageView
        android:background="@drawable/gd_rectangle_trans_black"
        android:id="@+id/gd__iv_dice_2"
        android:src="@mipmap/gd_dice2"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content" />
    <ImageView
        android:background="@drawable/gd_rectangle_trans_black"
        android:id="@+id/gd__iv_dice_3"
        android:src="@mipmap/gd_dice3"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content" />
    <TextView
        android:background="@drawable/gd_rectangle_trans_black"
        android:id="@+id/gd__iv_dice_tv"
        android:textColor="@color/yellow_brown_white_word"
        android:text="3"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent" />
</LinearLayout>