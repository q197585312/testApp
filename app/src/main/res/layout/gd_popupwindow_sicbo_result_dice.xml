<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/gd_rectangle_white_stroke_yellow"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/gd__iv_dice_1"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@mipmap/gd_dice1" />

        <TextView
            android:id="@+id/gd__iv_dice_tv"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/rectangle_sicbo_green"
            android:gravity="center"
            android:text="3"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/gd__iv_dice_2"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@mipmap/gd_dice2" />

        <TextView
            android:id="@+id/gd__tv_big_small"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:text="3"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/gd__iv_dice_3"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@mipmap/gd_dice3" />

        <TextView
            android:id="@+id/gd__tv_odd_even"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:text="3"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>


</LinearLayout>