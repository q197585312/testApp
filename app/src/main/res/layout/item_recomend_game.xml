<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/recommend_game_pic_iv"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/grey_background"
            android:scaleType="fitXY" />

        <RelativeLayout
            android:id="@+id/rl_content"
            style="@style/style_weight_horizontal">

            <LinearLayout
                android:id="@+id/ll_other"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                android:visibility="visible">

                <LinearLayout
                    style="@style/style_match_wrap"
                    android:orientation="horizontal"></LinearLayout>

                <TextView
                    android:id="@+id/recommend_game_title_tv"
                    style="@style/text_wrap_grey14"
                    android:layout_gravity="center_vertical"
                    android:drawablePadding="5dp"
                    android:maxLines="2"
                    android:text="体育博彩"
                    android:textColor="@color/black_grey"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/recommend_game_hot_tv"
                    style="@style/text_wrap_black10"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:maxLines="3"
                    android:minLines="3"
                    android:text=""
                    android:textColor="@color/grey_dark_word" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_afb33"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="5dp"
                android:visibility="gone">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:drawablePadding="5dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@mipmap/oval_arrow_right_red"
                    android:gravity="center"></TextView>
            </LinearLayout>
        </RelativeLayout>


        <View
            android:id="@+id/line"
            style="@style/line_vertical_grey1" />

        <TextView
            android:id="@+id/recommend_right_img_item_tv"
            style="@style/style_wrap_wrap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@mipmap/oval_arrow_right_red"
            android:gravity="center"></TextView>


    </LinearLayout>

    <View
        style="@style/line_horizontal_grey1"
        android:layout_height="10dp"
        android:background="@color/grey_default_bg" />


</LinearLayout>