<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/black"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_bet_gid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Stake"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/edt_bet_amount"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/transferacc_choice_bg"
            android:digits="0123456789."
            android:hint="@string/amount"
            android:padding="3dp"
            android:textColor="@color/black"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_bet_1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@mipmap/new_keno_money_1"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="9sp" />

        <TextView
            android:id="@+id/tv_bet_5"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:background="@mipmap/new_keno_money_5"
            android:gravity="center"
            android:text="5"
            android:textColor="@color/black"
            android:textSize="9sp" />

        <TextView
            android:id="@+id/tv_bet_10"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:background="@mipmap/new_keno_money_10"
            android:gravity="center"
            android:text="10"
            android:textColor="@color/black"
            android:textSize="9sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_bet_50"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@mipmap/new_keno_money_50"
            android:gravity="center"
            android:text="50"
            android:textColor="@color/black"
            android:textSize="9sp" />

        <TextView
            android:id="@+id/tv_bet_100"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:background="@mipmap/new_keno_money_100"
            android:gravity="center"
            android:text="100"
            android:textColor="@color/black"
            android:textSize="9sp" />

        <TextView
            android:id="@+id/tv_bet_500"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:background="@mipmap/new_keno_money_500"
            android:gravity="center"
            android:text="500"
            android:textColor="@color/black"
            android:textSize="9sp" />

        <TextView
            android:id="@+id/tv_bet_1000"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:background="@mipmap/new_keno_money_1000"
            android:gravity="center"
            android:text="1k"
            android:textColor="@color/black"
            android:textSize="9sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Max_Payout"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_max_payout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="0.00"
            android:textColor="#FFA012" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Bet_Limit"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_bet_limit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textColor="#FFA012" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:id="@+id/tv_submit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shape_new_keno_bet_btn_bg"
            android:gravity="center"
            android:text="@string/submit"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:background="@drawable/shape_new_keno_bet_btn_bg"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_reset"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:background="@drawable/shape_new_keno_bet_btn_bg"
            android:gravity="center"
            android:text="@string/Reset"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>