<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#C1C1C1"
        android:gravity="center"
        android:padding="10dp"
        >
        <TextView
    android:id="@+id/combination_title_item_tv"
            style="@style/style_weight_horizontal"
            android:text="@string/zhuhe"
            android:textColor="@color/black"
            android:textSize="15sp"
            />
        <TextView
        android:id="@+id/combination_odds_item_tv"
            style="@style/style_wrap_wrap"
            android:layout_marginRight="10dp"
            android:text="@string/peilv"
            android:textColor="@color/black"
            android:textSize="14sp"
            />
        <TextView
            android:id="@+id/combination_discount_item_tv"
            style="@style/style_wrap_wrap"
            android:text="@string/discount"
            android:textColor="@color/black"
            android:textSize="14sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/combination_select_item_tv1"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/small_even"
            android:textColor="@color/black"
            />
        <View
            style="@style/line_vertical_grey1"/>
        <TextView
            android:id="@+id/combination_select_item_tv2"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/small_odd"
            android:textColor="@color/black"
            />
        <View
            style="@style/line_vertical_grey1"/>
        <TextView
            android:id="@+id/combination_select_item_tv3"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/big_even"
            android:textColor="@color/black"
            />
        <View
            style="@style/line_vertical_grey1"/>
        <TextView
            android:id="@+id/combination_select_item_tv4"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/big_odd"
            android:textColor="@color/black"
            />
        <View
            style="@style/line_vertical_grey1"/>
        <TextView
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/amount_lottery"
            android:textColor="@color/black"
            />
        <View
            style="@style/line_vertical_grey1"/>
        <TextView
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/net_amount"
            android:textColor="@color/black"
            />
    </LinearLayout>
    <View
       style="@style/line_horizontal_grey1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        >
        <FrameLayout
            style="@style/style_weight_horizontal"
            android:layout_height="30dip"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            >
        <RadioButton
            android:id="@+id/combination_select_item_rtn1"
            style="@style/style_wrap_wrap"
            android:layout_gravity="center"
            android:background="@drawable/oval_white_red_center_check_bnt_selector"
            android:button="@null"
            android:gravity="center"
            />
        </FrameLayout>
        <View
            style="@style/line_vertical_grey1"/>
        <FrameLayout
            style="@style/style_weight_horizontal"
            android:layout_height="30dip"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            >
            <RadioButton
                android:id="@+id/combination_select_item_rtn2"
                style="@style/style_wrap_wrap"
                android:layout_gravity="center"
                android:background="@drawable/oval_white_red_center_check_bnt_selector"
                android:button="@null"
                android:gravity="center"
                />
        </FrameLayout>
        <View
            style="@style/line_vertical_grey1"/>
        <FrameLayout
            android:id="@+id/combination_item_fl3"
            style="@style/style_weight_horizontal"
            android:layout_height="30dip"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            >
            <RadioButton
                android:id="@+id/combination_select_item_rtn3"
                style="@style/style_wrap_wrap"
                android:layout_gravity="center"
                android:background="@drawable/oval_white_red_center_check_bnt_selector"
                android:button="@null"
                android:gravity="center"
                />
        </FrameLayout>
        <View
            style="@style/line_vertical_grey1"/>
        <FrameLayout
            android:id="@+id/combination_item_fl4"
            style="@style/style_weight_horizontal"
            android:layout_height="30dip"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            >
            <RadioButton
                android:id="@+id/combination_select_item_rtn4"
                style="@style/style_wrap_wrap"
                android:layout_gravity="center"
                android:background="@drawable/oval_white_red_center_check_bnt_selector"
                android:button="@null"
                android:gravity="center"
                />
        </FrameLayout>
        <View
            style="@style/line_vertical_grey1"/>
        <EditText
            android:id="@+id/combination_money_item_edt"
            android:layout_width="0dip"
            android:layout_height="30dip"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/rectangle_greylight_greystoke_corners7"
            android:gravity="center"
            android:imeOptions="flagNoExtractUi"
            android:inputType="number|numberDecimal"
            android:maxLength="6"
            android:text=""
            android:textColor="@color/black"
            />
        <View
            style="@style/line_vertical_grey1"/>
        <TextView
            android:id="@+id/combination_count_item_tv"
            android:layout_width="0dip"
            android:layout_height="30dip"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/rectangle_greylight_greystoke_corners7"
            android:gravity="center"
            android:textColor="@color/black"
            />
    </LinearLayout>
    <View
        style="@style/line_horizontal_grey1"/>
</LinearLayout>