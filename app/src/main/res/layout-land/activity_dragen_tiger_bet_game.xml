                    android:gravity="center_vertical"
                    android:textColor="@color/white"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/tv_table_game_number"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="0.5dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/white"
                    android:textSize="11sp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ListView
                    android:id="@+id/lv_user_info"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:divider="@null"></ListView>

                <ListView
                    android:id="@+id/lv_pool"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:divider="@null"></ListView>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <gaming178.com.mylibrary.myview.mylistview.HorizontalListView
        android:id="@+id/lv_baccarat_chips_h"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="-52dp"
        android:divider="@null"
        android:scrollbars="none"
        android:visibility="visible" />

    <gaming178.com.mylibrary.myview.miscwidgets.widget.Panel
        android:id="@+id/leftPanel1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:visibility="visible"
        app:closedHandle="@mipmap/handle_road_close"
        app:content="@+id/content"
        app:handle="@+id/handle1"
        app:openedHandle="@mipmap/handle_road_open"
        app:position="left">

        <ImageView
            android:id="@+id/handle1"
            android:layout_width="18dp"
            android:layout_height="70dp"
            android:layout_gravity="center_vertical" />

        <include
            android:id="@+id/content"
