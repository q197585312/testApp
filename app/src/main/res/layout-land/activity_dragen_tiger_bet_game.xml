                android:id="@+id/bottomPanel1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:visibility="visible"
                app:closedHandle="@drawable/rectangle_transparent"
                app:content="@+id/content2"
                app:handle="@+id/handle2"
                app:openedHandle="@drawable/rectangle_transparent"
                app:position="bottom">

                <ImageView
                    android:id="@+id/handle2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />

                <include
                    android:id="@+id/content2"
                    layout="@layout/layout_pop_bottom_tiger" />

            </gaming178.com.mylibrary.myview.miscwidgets.widget.Panel>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:orientation="vertical"
                android:visibility="gone">


                <LinearLayout
                    android:id="@+id/ll_chip_parent"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:background="@color/trans_black"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="30px"
                        android:src="@mipmap/arrow_up_grey_light" />

                    <ListView
                        android:id="@+id/lv_baccarat_chips"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:divider="@null"
                        android:scrollbars="none">

                    </ListView>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="30px"
                        android:src="@mipmap/arrow_down_grey_light" />
                </LinearLayout>
            </LinearLayout>

            <ListView
                android:id="@+id/lv_table_pool"
                android:layout_width="135px"
                android:layout_height="145px"
                android:layout_gravity="right"
                android:layout_marginTop="50px"
                android:layout_marginRight="5dp"
                android:background="@drawable/rectangle_grey_corner5_pop"
                android:padding="5dp"
                android:scrollbars="none"
                android:textColor="@color/yellow_brown_white_word"
                android:visibility="gone" />
        </FrameLayout>
    </LinearLayout>

