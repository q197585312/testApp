<?xml version="1.0" encoding="utf-8"?><!--  android:background="@drawable/rectangle_green_green_black_corner_hall_selector_"-->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/hall_game_pic_iv"
        android:layout_width="180dp"
        android:layout_height="123dp"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:scaleType="fitXY"
        android:src="@mipmap/chips_dice_trans" />

    <TextView
        android:id="@+id/hall_game_title_tv"
        android:layout_width="180dp"
        android:layout_height="22dp"
        android:layout_gravity="bottom|center_horizontal"
        android:background="@drawable/rectangle_grey_corner5_pop"
        android:gravity="center"
        android:paddingBottom="2dp"
        android:paddingTop="2dp"
        android:text="12"
        android:textColor="#FFDA5B"
        android:textSize="14sp" />
</FrameLayout>