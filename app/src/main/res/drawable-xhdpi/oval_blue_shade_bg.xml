<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- 阴影部分 -->
    <!-- 个人觉得更形象的表达：top代表下边的阴影高度，left代表右边的阴影宽度。其实也就是相对应的offset，solid中的颜色是阴影的颜色，也可以设置角度等等 -->
    <item

        android:right="2dp"
        android:top="2dp">
        <shape android:shape="oval" >

            <gradient
                android:centerX="0.5"
                android:centerY="0.5"
                android:endColor="@color/grey_background_trans"
                android:gradientRadius="30"
                android:startColor="@color/trans_black"
                android:type="radial" />

            />
        </shape>
    </item>

    <!-- 背景部分 -->
    <!-- 形象的表达：bottom代表背景部分在上边缘超出阴影的高度，right代表背景部分在左边超出阴影的宽度（相对应的offset） -->
    <item
        android:bottom="3dp"
        android:left="3dp">
        <shape android:shape="oval" >

            <gradient
                android:centerColor="@color/blue_table"
                android:centerX="0.5"
                android:centerY="0.5"
                android:endColor="@color/blue_oval_menu"
                android:gradientRadius="80"
                android:startColor="@color/blue_table"
                android:type="radial" />

            />

        </shape>
    </item>

</layer-list>