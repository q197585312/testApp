<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- bottom shadow -->
    <item>
        <shape android:shape="oval">

            <solid android:color="@color/yellow_gold" />
        </shape>
    </item>

    <!-- content -->
    <item
        android:bottom="3dp"
        android:left="3dp"
        android:right="3dp"
        android:top="3dp">
        <shape android:shape="oval">
            <stroke
                android:width="1dp"
                android:color="@color/trans_black_light" />
        </shape>
    </item>

</layer-list>