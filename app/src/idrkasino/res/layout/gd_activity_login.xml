<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#040404"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:background="@drawable/shape_raja_input_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:background="@mipmap/ratuuser"></ImageView>

                <EditText
                    android:id="@+id/gd__login_username_edt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="@string/input_username"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    android:textColor="#BE8B47"
                    android:textColorHint="#995C1D"
                    android:textCursorDrawable="@null"
                    android:textSize="13sp" />
            </LinearLayout>

            <View
                android:layout_width="20dp"
                android:layout_height="match_parent"></View>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:background="@drawable/shape_raja_input_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:background="@mipmap/ratupw"></ImageView>


                <EditText
                    android:id="@+id/gd__login_password_edt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="@string/input_password"
                    android:inputType="textPassword"
                    android:paddingLeft="10dp"
                    android:textColor="#BE8B47"
                    android:textColorHint="#995C1D"
                    android:textCursorDrawable="@null"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"></View>

            <Button
                android:id="@+id/gd__login_login_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="3"
                android:background="@drawable/shape_raja_login_bg"
                android:gravity="center"
                android:onClick="clickLogin"
                android:text="@string/gd_login"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/gd__tv_register"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="3"
                android:background="@drawable/shape_raja_register_bg"
                android:gravity="center"
                android:text="@string/register"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold"
                android:visibility="visible" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"></View>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:background="#1E1E1E"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/gd_img_login_title_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:src="@mipmap/gd_title_logo" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"></View>

            <View
                android:layout_width="1.5dp"
                android:layout_height="match_parent"
                android:background="#060606"></View>

            <View
                android:layout_width="1.5dp"
                android:layout_height="match_parent"
                android:background="#333333"></View>

            <RelativeLayout
                android:layout_width="45dp"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/gd_img_open"
                    android:layout_width="30dp"
                    android:layout_height="27dp"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/gd_menu"></ImageView>
            </RelativeLayout>
        </LinearLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:orientation="vertical"
                    android:paddingLeft="20dp"
                    android:paddingTop="8dp"
                    android:paddingRight="8dp"
                    android:paddingBottom="8dp">

                    <gaming178.com.casinogame.Control.AutoScrollTextView
                        android:id="@+id/gd__hall_game_bottom_prompt_tv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical" />

                </LinearLayout>

                <com.zhpan.bannerview.BannerViewPager
                    android:id="@+id/banner_view"
                    android:layout_width="match_parent"
                    android:layout_height="160dp" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rc_raja"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"></androidx.recyclerview.widget.RecyclerView>

                    <FrameLayout
                        android:id="@+id/fl_slide_left"
                        android:layout_width="25dp"
                        android:layout_height="match_parent"
                        android:background="@color/login_color">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:background="@mipmap/raja_left"></ImageView>
                    </FrameLayout>


                    <FrameLayout
                        android:id="@+id/fl_slide_right"
                        android:layout_width="25dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="right"
                        android:background="@color/login_color">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:background="@mipmap/raja_right"></ImageView>
                    </FrameLayout>
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:text="Jackpot Progresif"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="18sp"></TextView>

                <FrameLayout
                    android:id="@+id/fl_jackpot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@mipmap/bg_container">

                    <TextView
                        android:id="@+id/gd_tv_count"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="38,931,592.35"
                        android:textColor="@color/white"
                        android:textSize="20sp"></TextView>
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/login_color"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="23dp"
                        android:layout_marginLeft="10dp"
                        android:background="@mipmap/popular_games"></ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Game Populer"
                        android:textColor="@color/white"
                        android:textSize="18sp"></TextView>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"></View>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/raja_show_bg"
                        android:paddingLeft="6dp"
                        android:paddingTop="8dp"
                        android:paddingRight="6dp"
                        android:paddingBottom="8dp"
                        android:text="Lebih Banyak Game"
                        android:textColor="@color/white"
                        android:textSize="15sp"></TextView>
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rc_raja2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="20dp"></androidx.recyclerview.widget.RecyclerView>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

    <ImageView
        android:id="@+id/img_slide1"
        android:layout_width="27dp"
        android:layout_height="189dp"
        android:layout_marginTop="320dp"
        android:background="@mipmap/raja_contact_right"
        android:visibility="invisible"></ImageView>

    <ImageView
        android:id="@+id/img_slide2"
        android:layout_width="220dp"
        android:layout_height="189dp"
        android:layout_marginLeft="-220dp"
        android:layout_marginTop="320dp"
        android:background="@mipmap/raja_contact"
        android:visibility="visible"></ImageView>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/gd__ll_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.7">

                <ImageView
                    android:id="@+id/gd_img_login_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="40dp"
                    android:src="@mipmap/gd_title_logo" />

                <ImageView
                    android:id="@+id/gd_img_login_title_main_sbocasino77"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="60dp"
                    android:layout_marginRight="25dp"
                    android:background="@mipmap/gd_title_logo"
                    android:visibility="gone" />

            </FrameLayout>

            <LinearLayout
                android:id="@+id/ll_lg_and_remember"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/gd__ll_choose_language"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gd_rectangle_white_radius10"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/gd__iv_language_flag"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@mipmap/gd_flag_british_bg" />

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginLeft="30dp"
                        android:src="@mipmap/white_bottom" />


                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"></View>

                <LinearLayout
                    android:id="@+id/ll_remember_me"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/remember_me"
                        android:textColor="@color/white"
                        android:textSize="16sp"></TextView>

                    <CheckBox
                        android:id="@+id/cb_remember_me"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/checkbox_login_style"
                        android:button="@null"
                        android:clickable="false"></CheckBox>
                </LinearLayout>
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gd_login_bg"
                    android:orientation="vertical"
                    android:paddingLeft="15dp"
                    android:paddingTop="15dp"
                    android:paddingRight="15dp">

                    <LinearLayout
                        android:id="@+id/ll_liga365"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="5dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:paddingLeft="15dp"
                                android:text="www."
                                android:textColor="@color/white"
                                android:textSize="16sp" />

                            <EditText
                                android:id="@+id/gd__login_site_edt"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@null"
                                android:hint="@string/login_site"
                                android:paddingLeft="5dp"
                                android:singleLine="true"
                                android:textColor="@color/white"
                                android:textColorHint="@color/white"
                                android:textCursorDrawable="@null"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@color/white" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/gd__tv_whatsapp"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/gd_login_button_bg"
                            android:gravity="center"
                            android:text="@string/whatsapp"
                            android:textAllCaps="true"
                            android:textColor="#008000"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:visibility="gone" />
                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="25dp"></View>

                </LinearLayout>

            </FrameLayout>
        </LinearLayout>

        <include
            layout="@layout/toolbar_layout"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:drawablePadding="6dp"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:text="@string/input_username"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:visibility="gone"></TextView>

        <TextView
            android:id="@+id/tv_password_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:drawablePadding="6dp"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:text="@string/input_password"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:visibility="gone"></TextView>


        <ImageView
            android:id="@+id/gd_img_gif"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginLeft="45dp"
            android:scaleType="fitXY"
            android:visibility="gone"></ImageView>

        <LinearLayout
            android:id="@+id/ll_lang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="center"
            android:visibility="gone">

            <ImageView
                android:id="@+id/img_in"
                android:layout_width="45dp"
                android:layout_height="35dp"
                android:layout_marginRight="6dp"
                android:background="@mipmap/gd_lang_in_flag"></ImageView>

            <ImageView
                android:id="@+id/img_en"
                android:layout_width="45dp"
                android:layout_height="35dp"
                android:background="@mipmap/gd_lang_en_flag"></ImageView>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/gd_rl_webview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#85000000"
            android:visibility="gone">

            <WebView
                android:id="@+id/gd_login_webview"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_centerInParent="true"></WebView>

            <ImageView
                android:id="@+id/gd_img_exit"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_below="@+id/gd_login_webview"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:background="@mipmap/gd_login_exit"></ImageView>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_sbocasino77"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="55dp"
            android:background="#E6EDFF"
            android:orientation="horizontal"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:paddingBottom="8dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:src="@mipmap/sbocasino77_sports"></ImageView>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="SPORT"
                    android:textColor="#2E3C83"
                    android:textSize="12sp"></TextView>
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#2E3C83"></View>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:paddingBottom="8dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:src="@mipmap/sbocasino77_slots"></ImageView>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="SLOTS"
                    android:textColor="#2E3C83"
                    android:textSize="12sp"></TextView>
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#2E3C83"></View>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:paddingBottom="8dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:src="@mipmap/sbocasino77_casino"></ImageView>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="LIVE CASINO"
                    android:textColor="#2E3C83"
                    android:textSize="12sp"></TextView>
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#2E3C83"></View>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:paddingBottom="8dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:src="@mipmap/sbocasino77_cofkight"></ImageView>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="SABUNG AYAM"
                    android:textColor="#2E3C83"
                    android:textSize="12sp"></TextView>
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/img_gif_1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/gd_img_login_title"
            android:visibility="gone"></ImageView>


        <ImageView
            android:id="@+id/img_gif_2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="-10dp"
            android:layout_toRightOf="@+id/gd_img_login_title"
            android:visibility="gone"></ImageView>

        <TextView
            android:id="@+id/gd__tv_promo"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/gd_login_button_bg_red"
            android:gravity="center"
            android:text="@string/PROMOTION"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="gone" />
    </FrameLayout>

    <TextView
        android:id="@+id/tv_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="38,931,592.35"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:visibility="gone"></TextView>
</FrameLayout>