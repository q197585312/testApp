<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
  >

    <FrameLayout style="@style/style_wrap_wrap"
            android:layout_marginTop="5dp"
        >

        <ImageView
            android:id="@+id/base_menu_item_iv"
            style="@style/style_match_match"
            android:contentDescription="@null"
            android:layout_marginRight="5dp"
             />

        <CheckBox
            android:id="@+id/base_menu_item_cb"
            style="@style/style_wrap_wrap"
            android:button="@drawable/checkbox_switch_style_seletor"
            android:gravity="right|bottom"
            android:layout_gravity="right|bottom"
            android:visibility="visible" />
    </FrameLayout>

    <TextView
        android:id="@+id/base_menu_item_tv1"
        style="@style/text_match_black10"
        android:layout_gravity="center"
        android:gravity="center" />

    <TextView
        android:id="@+id/base_menu_item_tv2"
        style="@style/text_match_grey10"
        android:gravity="center" />
</LinearLayout>