<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/detail_top_fl"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/detail_top_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </androidx.viewpager.widget.ViewPager>
    <LinearLayout
        android:id="@+id/detail_bottom_ll"
        android:background="@drawable/rectangle_trans"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:gravity="center"
       style="@style/style_match_wrap_padding5">
        <TextView
            android:id="@+id/detail_top_content_tv"
           style="@style/style_weight_horizontal"
            android:textSize="10sp"
            android:singleLine="true"
            android:textColor="@color/white"/>
    <gaming178.com.mylibrary.myview.indicator.CirclePageIndicator
        android:id="@+id/detail_top_cpi"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingTop="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    </LinearLayout>
    </FrameLayout>
    <View
        android:layout_height="10dp"
        android:background="@color/grey_default_bg"
        style="@style/line_horizontal_grey1"/>
</LinearLayout>