<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="itemClick"
            type="com.unkonw.testapp.libs.base.OnItemClickListener" />

        <variable
            name="itemBean"
            type="com.nanyang.app.data.Main" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{(v)->itemClick.onItemClick(v,itemBean)}">

        <ImageView
            android:id="@+id/iv_content"
            imgUrl="@{itemBean.img}"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginRight="6dp"
            android:paddingBottom="3dp"
            android:scaleType="centerInside"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginBottom="6dp"
            android:gravity="center"
            android:text="@{itemBean.gameName}"
            android:textColor="@color/green_black_word"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_content"></TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>