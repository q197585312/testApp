<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_bg"
    android:orientation="vertical"
    tools:ignore="ContentDescription">

    <com.nanyang.app.load.login.CustomVideoView
        android:id="@+id/c_video_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <include
        layout="@layout/toolbar_layout_1188"
        android:visibility="gone" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#DDDDDD">

        <TextView
            android:id="@+id/btn_desktop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:onClick="loginView2"
            android:text="@string/desktop"
            android:textColor="@color/black"
            android:textSize="16sp"></TextView>

        <TextView
            android:id="@+id/login_language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="8dp"
            android:drawableRight="@mipmap/sanjiao1"
            android:text="@string/language_switch"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="113dp"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="@string/app_name"
        android:textAllCaps="true"
        android:textColor="#EFAF00"
        android:textSize="50sp"
        android:textStyle="bold" />


    <LinearLayout
        android:id="@+id/ll_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="183dp"
            android:background="@color/white">

            <EditText
                android:id="@+id/edt_login_username"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:hint="@string/home_user_name"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/gary2"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/img_name"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:background="@mipmap/username_gold"></ImageView>
        </FrameLayout>


        <View
            android:id="@+id/line_name"
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="@color/login_line_select_bg"></View>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="18dp"
            android:background="@color/white">

            <EditText
                android:id="@+id/edt_login_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:hint="@string/Password"
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/gary2"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/img_password"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:background="@mipmap/password_gary"></ImageView>
        </FrameLayout>

        <View
            android:id="@+id/line_password"
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="@color/login_line_no_select_bg"></View>

        <CheckBox
            android:id="@+id/cb_login_password_eye"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:button="@drawable/checkbox_eye_style"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/edt_login_password"
            app:layout_constraintEnd_toEndOf="@+id/edt_login_username"
            app:layout_constraintTop_toBottomOf="@+id/edt_login_username" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cb_login_remember"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:button="@drawable/checkbox_style_ez2888" />

            <TextView
                android:id="@+id/tv_remember_me"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/remember_me"
                android:textColor="@color/black" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <CheckBox
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:button="@drawable/checkbox_style_ez2888"
                android:checked="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Submit to Agree the Agreement"
                android:textColor="@color/black" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_bottom_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_login_login"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#F3BC26"
                android:gravity="center"
                android:text="@string/Login"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_all_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginTop="80dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/copyright_2018_afb88_all_rights_reserved"
            android:textColor="@color/gray_dark"
            android:textSize="12sp" />

    </LinearLayout>

</FrameLayout>