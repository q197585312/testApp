<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- bottom shadow -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="2dp" />
            <solid android:color="@color/trans_black_light" />
        </shape>
    </item>

    <!-- content -->
    <item
        android:bottom="0.3dp"
        android:left="1dp"
        android:right="0.3dp"
        android:top="1dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:endColor="#FF8B8B8B"
                android:gradientRadius="100%p"
                android:startColor="#FF474747"
                android:type="linear" />
            <corners android:radius="2dp" />
        </shape>
    </item>

</layer-list>