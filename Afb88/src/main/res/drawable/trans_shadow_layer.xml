<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- bottom shadow -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="2dp" />
            <stroke
                android:width="2dp"
                android:color="@color/trans_black" />
        </shape>
    </item>
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp"
        >
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="@color/green900_trans" />
            <corners android:radius="2dp" />

        </shape>
    </item>
    <!-- content -->
    <item
        android:bottom="3dp"
        android:left="3dp"
        android:right="3dp"
        android:top="3dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/transparent" />
            <corners android:radius="2dp" />

        </shape>
    </item>

</layer-list>