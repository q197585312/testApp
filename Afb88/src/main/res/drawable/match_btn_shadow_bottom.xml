<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- bottom shadow -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="2dp" />
            <solid android:color="@color/trans_black_light" />
        </shape>
    </item>

    <!-- content -->
    <item
        android:bottom="0.8dp"
        android:left="0.3dp"
        android:right="0.3dp"
        android:top="0.8dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:centerColor="#D9E0E0"
                android:endColor="#B6C5C5"
                android:gradientRadius="100%p"
                android:startColor="#F9FAFA"
                android:type="linear" />
            <corners android:radius="2dp" />
        </shape>
    </item>

</layer-list>