<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/fl_top_video"
    android:layout_width="match_parent"
    android:layout_height="255dp"
    android:orientation="vertical"
    android:visibility="gone"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/ll_back_title_line"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/green_dark"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_left_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="8dp"
            android:background="@mipmap/go_back_left_white"
            android:onClick="clickCLosePlay" />

        <TextView
            android:id="@+id/tv_match_play"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="left"
            android:onClick="onChangeMatchClick"
            android:text="@string/All_Match"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/iv_title_live_stream"
            android:layout_width="30dp"
            android:layout_height="28dp"
            android:layout_marginRight="12dp"
            android:background="@mipmap/rectangle_bg_shadow"
            android:layout_gravity="center"
            android:padding="5dp"

            android:gravity="center"
            android:src="@mipmap/tv_play_2"
            android:text="@string/live_stream"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_title_live_center"
            android:layout_width="30dp"
            android:layout_height="28dp"
            android:layout_marginRight="12dp"
            android:background="@mipmap/rectangle_bg_shadow"
            android:layout_gravity="center"
            android:padding="5dp"
            android:gravity="center"
            android:src="@mipmap/soccer_hall_2"
            android:text="@string/live_center"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_bet_list"
            android:layout_width="30dp"
            android:layout_height="28dp"
            android:layout_marginRight="12dp"
            android:background="@mipmap/rectangle_bg_shadow"
            android:layout_gravity="center"
            android:padding="5dp"
            android:gravity="center"
            android:onClick="clickBets"
            android:src="@mipmap/sport_bet_list" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fl_run_match_title"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:background="@color/black"
        android:onClick="clickRunTitle">

        <LinearLayout
            android:id="@+id/ll_run_match_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_run_match_home"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="right"
                android:marqueeRepeatLimit="marquee_forever"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/tv_run_match_home_score"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="@color/yellow_center_user"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="-"
                android:textColor="@color/grey_dark"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_run_match_away_score"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="@color/yellow_center_user"
                android:textSize="12sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/tv_run_match_away"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="12sp" />

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:background="@mipmap/arrow_down_drop_white" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <cn.nodemedia.NodePlayerView
            android:id="@+id/video_player_stream"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tv_run_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold" />

        <com.unkonw.testapp.libs.widget.LollipopFixedWebView
            android:id="@+id/web_wv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/ll_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/grey_trans"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:id="@+id/iv_play_status"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="8dp"
                android:src="@mipmap/play_pause_white" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/iv_voice"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:src="@mipmap/play_mute_white" />

            <ImageView
                android:id="@+id/iv_full_screen"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="5dp"
                android:onClick="closeTv"
                android:src="@mipmap/play_close_tv" />
        </LinearLayout>
    </FrameLayout>


</LinearLayout>