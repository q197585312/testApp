<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_parent_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/grey_white_bg"
    android:gravity="center"
    android:orientation="vertical">
    <com.unkonw.testapp.libs.view.CustomGroup
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/ll_match_outside"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="module_match_head_v,module_match_title_ll,ll_match_content"
        />
    <View
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/module_match_head_v"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/grey_white_bg"
        />
    <com.unkonw.testapp.libs.view.CustomGroup
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/module_match_title_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="module_match_title_bg,module_League_collection_tv,module_match_title_tv,module_League_child_count_tv"
        />


    <View

        android:id="@+id/module_match_title_bg"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/module_match_head_v"
        android:layout_height="30dp"
        android:background="@color/grey_thick_line"
        />
    <TextView
        android:id="@+id/module_League_collection_tv"
        android:layout_width="19dp"
        android:layout_height="19dp"
        app:layout_constraintTop_toTopOf="@+id/module_match_title_bg"
        app:layout_constraintBottom_toBottomOf="@+id/module_match_title_bg"
        app:layout_constraintStart_toStartOf="@+id/module_match_head_v"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="2dp"
        android:background="@mipmap/sport_game_star_yellow"
        android:gravity="center"
        android:padding="4dp"
        android:textColor="@color/grey_dark_word"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/module_match_title_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"

        app:layout_constraintStart_toEndOf="@+id/module_League_collection_tv"
        app:layout_constraintEnd_toStartOf="@+id/module_League_child_count_tv"
        app:layout_constraintTop_toTopOf="@+id/module_League_collection_tv"
        app:layout_constraintBottom_toBottomOf="@+id/module_League_collection_tv"
        android:gravity="center_vertical"
        android:maxLines="2"
        android:paddingStart="10dp"
        android:textColor="@color/black_grey" />

    <TextView
        android:id="@+id/module_League_child_count_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="2dp"
        android:padding="4dp"
        android:visibility="gone"
        android:background="@drawable/oval_green_stroke_black"
        android:gravity="center"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/module_match_head_v"
        app:layout_constraintTop_toTopOf="@+id/module_League_collection_tv"
        app:layout_constraintBottom_toBottomOf="@+id/module_League_collection_tv"
        />




    <com.unkonw.testapp.libs.view.CustomGroup
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/ll_match_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="line_content,ll_match_content_bg,module_match_collection_tv
,iv_last_call_gif,module_match_live_iv,module_match_date_tv,module_match_time_tv
,module_match_has_p_tv,iv_hall_btn,module_right_mark_tv,hdp_title_tv
,ou_title_tv,module_match_home_score_tv,module_match_home_team_tv,module_match_home_red_card_tv
,module_match_away_score_tv,module_match_away_team_tv,module_match_away_red_card_tv,module_center_sl
,line_bottom1,view_line"
        />
    <View
        app:layout_constraintTop_toBottomOf="@+id/module_match_title_bg"
        android:id="@+id/line_content"
        android:background="@color/gray_dark"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"/>
    <View
        android:id="@+id/ll_match_content_bg"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/line_content"
        android:layout_height="98dp"
        android:background="@color/grey_white_bg"
        />
    <TextView
        app:layout_constraintStart_toStartOf="@+id/ll_match_content_bg"
        app:layout_constraintTop_toTopOf="@+id/ll_match_content_bg"
        android:id="@+id/module_match_collection_tv"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_gravity="center_vertical"
        android:layout_marginHorizontal="2dp"
        android:layout_marginVertical="2dp"
        android:background="@mipmap/sport_game_star_yellow"
        android:gravity="center"
        android:textColor="@color/grey_dark_word" />
    <ImageView

        app:layout_constraintStart_toEndOf="@+id/module_match_collection_tv"
        app:layout_constraintTop_toTopOf="@+id/module_match_collection_tv"
        app:layout_constraintBottom_toBottomOf="@+id/module_match_collection_tv"
        android:id="@+id/iv_last_call_gif"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="4dp" />

    <TextView
        app:layout_constraintStart_toEndOf="@+id/iv_last_call_gif"
        app:layout_constraintTop_toTopOf="@+id/module_match_collection_tv"
        app:layout_constraintBottom_toBottomOf="@+id/module_match_collection_tv"
        android:id="@+id/module_match_live_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="4dp"
        android:gravity="center"
        android:maxLines="1"
        android:textSize="12sp"
        android:textStyle="bold"
        android:visibility="visible" />
    <TextView

        app:layout_constraintStart_toEndOf="@+id/module_match_live_iv"
        app:layout_constraintTop_toTopOf="@+id/module_match_collection_tv"
        app:layout_constraintBottom_toBottomOf="@+id/module_match_collection_tv"
        android:id="@+id/module_match_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="4dp"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="@color/grey_thick_line"
        android:textSize="12sp"
        android:textStyle="bold"
        />

    <TextView
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@+id/module_match_date_tv"
        app:layout_constraintTop_toTopOf="@+id/module_match_collection_tv"
        app:layout_constraintBottom_toBottomOf="@+id/module_match_collection_tv"
        android:id="@+id/module_match_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="4dp"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:textColor="@color/grey_thick_line"
        android:textSize="12sp"
        android:textStyle="bold" />
    <TextView
        app:layout_constraintStart_toEndOf="@+id/module_match_time_tv"
        app:layout_constraintTop_toTopOf="@+id/module_match_collection_tv"
        app:layout_constraintBottom_toBottomOf="@+id/module_match_collection_tv"
        android:id="@+id/module_match_has_p_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="4dp"
        android:background="@drawable/rectangle_green_stroke_green_corner2"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:text="P"
        android:textAllCaps="true"
        android:textColor="@color/p_dart_bg"
        android:textSize="13sp" />

    <ImageView
        app:layout_constraintStart_toEndOf="@+id/module_right_mark_tv"
        app:layout_constraintTop_toTopOf="@+id/module_match_collection_tv"
        app:layout_constraintBottom_toBottomOf="@+id/module_match_collection_tv"
        android:id="@+id/iv_hall_btn"
        android:layout_width="23dp"
        android:layout_height="18dp"
        android:layout_marginLeft="4dp"
        android:scaleType="fitXY"
        android:visibility="visible" />

    <TextView
        app:layout_constraintStart_toEndOf="@+id/module_match_has_p_tv"
        app:layout_constraintTop_toTopOf="@+id/module_match_collection_tv"
        app:layout_constraintBottom_toBottomOf="@+id/module_match_collection_tv"
        android:id="@+id/module_right_mark_tv"
        android:layout_width="31dp"
        android:layout_height="18dp"
        android:layout_marginLeft="4dp"
        android:background="@drawable/match_btn_shadow_bottom"
        android:drawableLeft="@mipmap/crude_add_green"
        android:gravity="center_vertical"
        android:paddingLeft="0.5dp"
        android:text="44"
        android:textColor="@color/black_grey"
        android:textSize="13sp"
        android:visibility="visible" />




    <TextView
        android:id="@+id/hdp_title_tv"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:maxLines="1"
        app:layout_constraintStart_toStartOf="@+id/module_center_sl"

        app:layout_constraintTop_toTopOf="@+id/module_match_collection_tv"
        app:layout_constraintBottom_toBottomOf="@+id/module_match_collection_tv"
        android:text="@string/FT_HDP"
        android:textColor="@color/black_grey"
        android:textSize="13.5sp" />

    <TextView
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/module_match_collection_tv"
        app:layout_constraintBottom_toBottomOf="@+id/module_match_collection_tv"
        android:id="@+id/ou_title_tv"
        android:layout_width="75dp"
        android:layout_marginHorizontal="2dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:maxLines="1"
        android:text="@string/FT_OU"
        android:textColor="@color/black_grey"
        android:textSize="13.5sp" />

    <TextView
        app:layout_constraintStart_toStartOf="@id/module_match_collection_tv"
        app:layout_constraintTop_toTopOf="@+id/module_match_home_team_tv"
        app:layout_constraintBottom_toBottomOf="@+id/module_match_home_team_tv"
        android:id="@+id/module_match_home_score_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingLeft="1dp"
        android:paddingRight="1dp"
        android:textColor="@color/black"
        android:textSize="13.5sp"
        android:textStyle="bold"
        android:visibility="visible" />
    <TextView
        app:layout_constraintStart_toEndOf="@id/module_match_home_score_tv"
        app:layout_constraintTop_toBottomOf="@+id/module_match_collection_tv"
        app:layout_constraintBottom_toTopOf="@+id/module_match_away_team_tv"
        android:id="@+id/module_match_home_team_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:drawablePadding="5dp"
        android:gravity="left"
        android:maxLines="1"
        android:singleLine="true"
        android:text="zheshiyigeceshi mingz "
        android:textColor="@color/black_grey"
        android:textSize="13.5sp" />

    <TextView
        app:layout_constraintStart_toEndOf="@id/module_match_home_team_tv"
        app:layout_constraintTop_toTopOf="@+id/module_match_home_score_tv"
        app:layout_constraintBottom_toBottomOf="@+id/module_match_home_score_tv"
        android:id="@+id/module_match_home_red_card_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/red"
        android:gravity="center"
        android:minWidth="10dp"
        android:paddingLeft="1dp"
        android:paddingRight="1dp"
        android:textColor="@color/white"
        android:textSize="11.5sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <TextView
        app:layout_constraintTop_toTopOf="@+id/module_match_away_team_tv"
        app:layout_constraintStart_toStartOf="@+id/module_match_home_score_tv"
        app:layout_constraintBottom_toBottomOf="@+id/module_match_away_team_tv"
        android:id="@+id/module_match_away_score_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="1dp"
        android:gravity="center"
        android:paddingLeft="1dp"
        android:paddingRight="1dp"
        android:textColor="@color/black"
        android:textSize="13.5sp"
        android:textStyle="bold"
        android:visibility="visible" />


    <TextView
        app:layout_constraintStart_toEndOf="@id/module_match_away_score_tv"
        app:layout_constraintTop_toBottomOf="@+id/module_match_home_team_tv"
        app:layout_constraintBottom_toBottomOf="@+id/ll_match_content_bg"
        android:id="@+id/module_match_away_team_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_marginTop="1dp"
        android:drawablePadding="5dp"
        android:gravity="left"
        android:maxLines="1"
        android:singleLine="true"
        android:text="zheshiyigeceshi mingz "
        android:textColor="@color/black_grey"
        android:textSize="13.5sp" />

    <TextView
        app:layout_constraintStart_toEndOf="@id/module_match_away_team_tv"
        app:layout_constraintTop_toTopOf="@+id/module_match_away_score_tv"
        app:layout_constraintBottom_toBottomOf="@+id/module_match_away_score_tv"
        android:id="@+id/module_match_away_red_card_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="1dp"
        android:gravity="center"
        android:minWidth="10dp"
        android:paddingLeft="1dp"
        android:paddingRight="1dp"
        android:textColor="@color/white"
        android:textSize="11.5sp"
        android:textStyle="bold"
        android:visibility="visible" />
    <FrameLayout

        app:layout_constraintEnd_toEndOf="@+id/ou_title_tv"
        app:layout_constraintTop_toTopOf="@+id/module_match_home_team_tv"
        app:layout_constraintBottom_toBottomOf="@+id/module_match_away_team_tv"
        android:id="@+id/module_center_sl"
        android:layout_width="174dp"
        android:layout_height="match_parent">

        <include
            layout="@layout/sport_item_table_module_viewpager"
            tools:visibility="visible"
            android:visibility="gone" />

    </FrameLayout>

            <View
                android:id="@+id/line_bottom1"
                app:layout_constraintTop_toBottomOf="@+id/ll_match_content_bg"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/grey_button" />


            <View
                app:layout_constraintTop_toBottomOf="@+id/line_bottom1"
                android:id="@+id/view_line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/grey_thick_line" />


    <LinearLayout

        app:layout_constraintTop_toBottomOf="@+id/view_line"
        android:id="@+id/ll_title_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green_light_button"
        android:gravity="center"
        tools:visibility="visible"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="5dp"
            android:src="@mipmap/arrow_left_green_double" />

        <androidx.recyclerview.widget.RecyclerView

            android:id="@+id/rv_title_list"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginRight="5dp"
            android:src="@mipmap/arrow_right_green_double" />
    </LinearLayout>

    <LinearLayout
        app:layout_constraintTop_toBottomOf="@+id/ll_title_list"
        android:id="@+id/common_ball_parent_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        />

</androidx.constraintlayout.widget.ConstraintLayout>