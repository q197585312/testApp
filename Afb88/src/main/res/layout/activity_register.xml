<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green500"
    android:orientation="vertical">

    <include layout="@layout/toolbar_layout" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edt_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@null"
                android:hint="@string/Account"
                android:maxLines="1"
                android:paddingBottom="4dp"
                android:paddingRight="8dp"
                android:paddingTop="8dp"
                android:text=""
                android:textColor="@color/black"
                android:textColorHint="@color/trans_white"
                android:textSize="15sp" />

            <include layout="@layout/item_line_with_no_margin" />

            <TextView
                android:id="@+id/tv_account_prompt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/black_grey"
                android:visibility="gone" />

            <EditText
                android:paddingTop="8dp"
                android:paddingBottom="4dp"
                android:paddingRight="8dp"
                android:id="@+id/edt_password"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="@string/Password"
                android:inputType="textPassword"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/black"
                android:textColorHint="@color/trans_white"
                android:textSize="15sp" />

            <include layout="@layout/item_line_with_no_margin" />

            <TextView
                android:id="@+id/tv_password_prompt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/black_grey"
                android:visibility="gone" />

            <EditText
                android:paddingTop="8dp"
                android:paddingBottom="4dp"
                android:paddingRight="8dp"
                android:id="@+id/edt_password_repeat"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="@string/Repeat_password"
                android:inputType="textPassword"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/black"
                android:textColorHint="@color/trans_white"
                android:textSize="15sp" />

            <include layout="@layout/item_line_with_no_margin" />

            <TextView
                android:id="@+id/tv_password_repeat_prompt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/black_grey"
                android:visibility="gone" />


            <TextView
                android:paddingTop="8dp"
                android:paddingBottom="4dp"
                android:paddingRight="8dp"
                android:id="@+id/tv_currency"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:drawableRight="@mipmap/drop"
                android:hint="Currency"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/black"
                android:textSize="15sp" />

            <include layout="@layout/item_line_with_no_margin" />

            <TextView
                android:id="@+id/tv_currency_prompt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/black_grey"
                android:visibility="gone" />

            <EditText
                android:paddingTop="8dp"
                android:paddingBottom="4dp"
                android:paddingRight="8dp"
                android:id="@+id/edt_contactnum"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="Contact Number"
                android:inputType="phone"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/black"
                android:textColorHint="@color/trans_white"
                android:textSize="15sp" />

            <include layout="@layout/item_line_with_no_margin" />

            <TextView
                android:id="@+id/tv_contactnum_prompt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/black_grey"
                android:visibility="gone" />

            <EditText
                android:paddingTop="8dp"
                android:paddingBottom="4dp"
                android:paddingRight="8dp"
                android:id="@+id/edt_email"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="@string/Email"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/black"
                android:textColorHint="@color/trans_white"
                android:textSize="15sp" />

            <include layout="@layout/item_line_with_no_margin" />

            <TextView
                android:id="@+id/tv_email_prompt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/black_grey"
                android:visibility="gone" />

            <TextView
                android:paddingTop="8dp"
                android:paddingBottom="4dp"
                android:paddingRight="8dp"
                android:id="@+id/tv_bankname"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:drawableRight="@mipmap/drop"
                android:hint="bankname"
                android:inputType="phone"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/black"
                android:textSize="15sp" />

            <include layout="@layout/item_line_with_no_margin" />

            <TextView
                android:id="@+id/tv_bankname_prompt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/black_grey"
                android:visibility="gone" />

            <EditText
                android:id="@+id/edt_accountname"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="Account Name"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:paddingBottom="4dp"
                android:paddingRight="8dp"
                android:paddingTop="8dp"
                android:text=""
                android:textColor="@color/black"
                android:textColorHint="@color/trans_white"
                android:textSize="15sp" />

            <include layout="@layout/item_line_with_no_margin" />

            <TextView
                android:id="@+id/tv_accountname_prompt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/black_grey"
                android:visibility="gone" />

            <EditText
                android:paddingTop="8dp"
                android:paddingBottom="4dp"
                android:paddingRight="8dp"
                android:id="@+id/edt_accountnumber"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="Account Number"
                android:inputType="phone"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/black"
                android:textColorHint="@color/trans_white"
                android:textSize="15sp" />

            <include layout="@layout/item_line_with_no_margin" />

            <TextView
                android:id="@+id/tv_accountnumber_prompt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/black_grey"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textAllCaps="false"
                android:background="@drawable/rectangle_yellow_button_all_corner5"
                android:text="@string/Submit"
                android:textColor="@color/white" />
        </LinearLayout>


    </ScrollView>

</LinearLayout>