<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingRight="1dp">


    <LinearLayout
        android:id="@+id/ll_leave_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/fl_leave_1_left"
            android:layout_width="0dp"
            android:layout_height="34dp"
            android:layout_weight="1"
            android:padding="1.5dp">

            <RelativeLayout
                android:id="@+id/ll_leave_1_left"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/match_odds_content_bg"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/img_up_down_up1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="1.5dp"
                    android:layout_marginRight="1.5dp"
                    android:src="@mipmap/arrow_down_update_red"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/viewpager_match_home_hdp_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/img_up_down_up1"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:paddingLeft="1.5dp"
                    android:textColor="@color/green_dark"
                    android:textSize="13.5sp" />

                <TextView
                    android:id="@+id/viewpager_match_home_hdpodds_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="4dp"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:maxLines="1"
                    android:textColor="@color/black_grey"
                    android:textSize="13.5sp" />
            </RelativeLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_leave_1_right"
            android:layout_width="0dp"
            android:layout_height="34dp"
            android:layout_weight="1"
            android:padding="1.5dp">

            <RelativeLayout
                android:id="@+id/ll_leave_1_right"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/match_odds_content_bg"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/img_up_down_up2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="1.5dp"
                    android:layout_marginRight="1.5dp"
                    android:src="@mipmap/arrow_down_update_red"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/viewpager_match_ou_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/img_up_down_up2"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:paddingLeft="1.5dp"
                    android:textColor="#616161"
                    android:textSize="13.5sp" />

                <TextView
                    android:id="@+id/viewpager_match_overodds_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="4dp"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:maxLines="1"
                    android:textColor="@color/black_grey"
                    android:textSize="13.5sp" />
            </RelativeLayout>
        </FrameLayout>

        <TextView
            android:id="@+id/viewpager_odd_label_tv"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:gravity="center"
            android:maxLines="1"
            android:paddingRight="2dp"
            android:text="@string/ODD"
            android:textColor="@color/green_dark"
            android:textSize="13.5sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/viewpager_match_odd_tv"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:gravity="center"
            android:maxLines="1"
            android:paddingRight="2dp"
            android:textColor="@color/black_grey"
            android:textSize="13.5sp"
            android:textStyle="bold"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="34dp"
            android:layout_weight="1"
            android:padding="1.5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/match_odds_content_bg"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/img_up_down_down1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="1.5dp"
                    android:layout_marginRight="1.5dp"
                    android:src="@mipmap/arrow_down_update_red"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/viewpager_match_visit_hdp_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/img_up_down_down1"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:paddingLeft="1.5dp"
                    android:textColor="@color/green_dark"
                    android:textSize="13.5sp" />

                <TextView
                    android:id="@+id/viewpager_match_visit_hdpodds_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="4dp"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:maxLines="1"
                    android:textColor="@color/black_grey"
                    android:textSize="13.5sp" />
            </RelativeLayout>
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="34dp"
            android:layout_weight="1"
            android:padding="1.5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/match_odds_content_bg"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/img_up_down_down2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="1.5dp"
                    android:layout_marginRight="1.5dp"
                    android:src="@mipmap/arrow_down_update_red"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/viewpager_match_ou2_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/img_up_down_down2"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:paddingLeft="1.5dp"
                    android:textColor="#616161"
                    android:textSize="13.5sp" />

                <TextView
                    android:id="@+id/viewpager_match_underodds_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="4dp"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:maxLines="1"
                    android:textColor="@color/black_grey"
                    android:textSize="13.5sp" />
            </RelativeLayout>
        </FrameLayout>

        <TextView
            android:id="@+id/viewpager_even_label_tv"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:gravity="top|right"
            android:maxLines="1"
            android:paddingRight="2dp"
            android:text="@string/EVEN"
            android:textColor="@color/green_dark"
            android:textSize="13.5sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/viewpager_match_even_tv"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:gravity="top|right"
            android:maxLines="1"
            android:paddingRight="2dp"
            android:textColor="@color/black_grey"
            android:textSize="13.5sp"
            android:textStyle="bold"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>