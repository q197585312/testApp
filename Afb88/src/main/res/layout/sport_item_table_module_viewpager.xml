<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/match_odds_content_bg">

            <TextView
                android:id="@+id/viewpager_match_home_hdp_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:maxLines="1"
                android:paddingRight="2dp"
                android:textColor="@color/green_dark"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/viewpager_match_home_hdpodds_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:maxLines="1"
                android:paddingRight="2dp"
                android:textColor="@color/black_grey"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/match_odds_content_bg">

            <TextView
                android:id="@+id/viewpager_match_ou_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:maxLines="1"
                android:paddingRight="2dp"
                android:textColor="@color/green_dark"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/viewpager_match_overodds_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:maxLines="1"
                android:paddingRight="2dp"
                android:textColor="@color/black_grey"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/viewpager_odd_label_tv"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:gravity="center"
            android:maxLines="1"
            android:paddingRight="2dp"
            android:text="@string/ODD"
            android:textColor="@color/green_dark"
            android:textSize="12sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/viewpager_match_odd_tv"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:gravity="center"
            android:maxLines="1"
            android:paddingRight="2dp"
            android:textColor="@color/black_grey"
            android:textSize="12sp"
            android:textStyle="bold"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/match_odds_content_bg">

            <TextView
                android:id="@+id/viewpager_match_visit_hdp_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:maxLines="1"
                android:paddingRight="2dp"
                android:textColor="@color/green_dark"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/viewpager_match_visit_hdpodds_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:maxLines="1"
                android:paddingRight="2dp"
                android:textColor="@color/black_grey"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/match_odds_content_bg">

            <TextView
                android:id="@+id/viewpager_match_ou2_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:maxLines="1"
                android:paddingRight="2dp"
                android:textColor="@color/green_dark"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/viewpager_match_underodds_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:maxLines="1"
                android:paddingRight="2dp"
                android:textColor="@color/black_grey"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/viewpager_even_label_tv"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:gravity="top|right"
            android:maxLines="1"
            android:paddingRight="2dp"
            android:text="@string/EVEN"
            android:textColor="@color/green_dark"
            android:textSize="12sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/viewpager_match_even_tv"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:gravity="top|right"
            android:maxLines="1"
            android:paddingRight="2dp"
            android:textColor="@color/black_grey"
            android:textSize="12sp"
            android:textStyle="bold"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>