<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/statement_first_key_ll"
        style="@style/style_match_wrap"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_statement_date"
            style="@style/text_match_black10"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:textSize="9sp"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingLeft="2dp"
            android:paddingTop="5dp"
            android:singleLine="true"
            android:text="@string/date"
            android:textColor="#000000" />

        <View
            android:layout_width="0.4dp"
            android:layout_height="30dp"
            android:background="@color/green_light" />

        <View
            android:layout_width="0.4dp"
            android:layout_height="30dp"
            android:background="@color/default_fill_color" />

        <TextView
            android:id="@+id/tv_statement_stake"
            style="@style/text_match_black10"
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:gravity="center"
            android:padding="2dp"
            android:textSize="9sp"
            android:singleLine="true"
            android:text="@string/statement_stake"
            android:textColor="#000000" />

        <View
            android:layout_width="0.4dp"
            android:layout_height="30dp"
            android:background="@color/green_light" />

        <View
            android:layout_width="0.4dp"
            android:layout_height="30dp"
            android:background="@color/default_fill_color" />

        <TextView
            android:id="@+id/tv_statement_amount"
            style="@style/text_match_black10"
            android:layout_width="0dp"
            android:layout_weight="1.1"
            android:gravity="center"
            android:textSize="9sp"
            android:padding="2dp"
            android:singleLine="true"
            android:text="@string/valid_amount"
            android:textColor="#000000" />

        <View
            android:layout_width="0.4dp"
            android:layout_height="30dp"
            android:background="@color/green_light" />

        <View
            android:layout_width="0.4dp"
            android:layout_height="30dp"
            android:background="@color/default_fill_color" />

        <TextView
            android:id="@+id/tv_statement_win_or_lose"
            style="@style/text_match_black10"
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:gravity="center"
            android:textSize="9sp"
            android:singleLine="true"
            android:text="@string/w_l"
            android:textColor="#000000" />

        <View
            android:layout_width="0.4dp"
            android:layout_height="30dp"
            android:background="@color/green_light" />

        <View
            android:layout_width="0.4dp"
            android:layout_height="30dp"
            android:background="@color/default_fill_color" />

        <TextView
            android:id="@+id/tv_statement_commission"
            style="@style/text_match_black10"
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:gravity="center"
            android:textSize="9sp"
            android:padding="2dp"
            android:singleLine="true"
            android:text="@string/commission"
            android:textColor="#000000" />

        <View
            android:layout_width="0.4dp"
            android:layout_height="30dp"
            android:background="@color/green_light" />

        <View
            android:layout_width="0.4dp"
            android:layout_height="30dp"
            android:background="@color/default_fill_color" />

        <TextView
            android:id="@+id/tv_statement_settled"
            style="@style/text_match_black10"
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:gravity="center"
            android:padding="2dp"
            android:singleLine="true"
            android:textSize="9sp"
            android:text="@string/settled_statement"
            android:textColor="#000000" />

        <View
            android:layout_width="0.4dp"
            android:layout_height="30dp"
            android:background="@color/green_light" />

        <View
            android:layout_width="0.4dp"
            android:layout_height="30dp"
            android:background="@color/default_fill_color" />

        <TextView
            android:id="@+id/tv_statement_balance"
            style="@style/text_match_black10"
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:gravity="center"
            android:textSize="9sp"
            android:padding="2dp"
            android:singleLine="true"
            android:text="@string/balance"
            android:textColor="#000000" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:background="@color/green_light" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:background="@color/default_fill_color" />
</LinearLayout>