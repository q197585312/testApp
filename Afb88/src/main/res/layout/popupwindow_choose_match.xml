<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        style="@style/style_match_wrap"
        android:background="@color/green"
        android:orientation="horizontal"
        android:visibility="visible">
        <TextView
            android:id="@+id/tv_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableLeft="@mipmap/go_back_left_white"
            android:text="@string/select_league"
            android:textColor="@color/white"
           />

        <TextView
            android:id="@+id/tv_all_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="center"
            android:background="@mipmap/choose_all"
            android:layout_marginRight="10dp"
            android:textColor="@color/white"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/tv_all_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@mipmap/choose_clear"
            android:layout_marginRight="10dp"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/tv_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="center"
            android:background="@mipmap/choose_submit"
            android:layout_marginRight="10dp"
            android:textColor="@color/white"
            android:textSize="12sp" />

    </LinearLayout>
    <View style="@style/line_horizontal_grey1" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:layout_weight="1">

        <include layout="@layout/layout_base_recycler_view" />
    </FrameLayout>




</LinearLayout>