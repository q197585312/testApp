<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green_light_white"
    android:orientation="vertical">

    <include layout="@layout/toolbar_layout" />

    <LinearLayout
        android:background="@color/green_dark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            style="@style/style_match_wrap"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_marginLeft="7dp"
                android:layout_weight="0.8"
                android:gravity="center|left"
                android:paddingBottom="5dp"
                android:paddingLeft="2dp"
                android:paddingTop="5dp"
                android:singleLine="true"
                android:text="@string/date"
                android:textColor="@color/white"
                android:textSize="9sp" />

            <View
                android:layout_width="0.4dp"
                android:layout_height="30dp"
                android:background="@color/green_light" />

            <View
                android:layout_width="0.4dp"
                android:layout_height="30dp"
                android:background="@color/default_fill_color" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:gravity="center"
                android:padding="2dp"
                android:singleLine="true"
                android:text="@string/event_statement"
                android:textColor="@color/white"
                android:textSize="9sp" />

            <View
                android:layout_width="0.4dp"
                android:layout_height="30dp"
                android:background="@color/green_light" />

            <View
                android:layout_width="0.4dp"
                android:layout_height="30dp"
                android:background="@color/default_fill_color" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:gravity="center"
                android:padding="2dp"
                android:singleLine="true"
                android:text="@string/stake_statement"
                android:textColor="@color/white"
                android:textSize="9sp" />

            <View
                android:layout_width="0.4dp"
                android:layout_height="30dp"
                android:background="@color/green_light" />

            <View
                android:layout_width="0.4dp"
                android:layout_height="30dp"
                android:background="@color/default_fill_color" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="0.9"
                android:gravity="center"
                android:padding="2dp"
                android:singleLine="true"
                android:text="@string/amount"
                android:textColor="@color/white"
                android:textSize="9sp" />

            <View
                android:layout_width="0.4dp"
                android:layout_height="30dp"
                android:background="@color/green_light" />

            <View
                android:layout_width="0.4dp"
                android:layout_height="30dp"
                android:background="@color/default_fill_color" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:gravity="center"
                android:padding="2dp"
                android:singleLine="true"
                android:text="@string/commission"
                android:textColor="@color/white"
                android:textSize="9sp" />

            <View
                android:layout_width="0.4dp"
                android:layout_height="30dp"
                android:background="@color/green_light" />

            <View
                android:layout_width="0.4dp"
                android:layout_height="30dp"
                android:background="@color/default_fill_color" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:background="@color/green_light" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:background="@color/default_fill_color" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/statement_stake_rc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

</LinearLayout>