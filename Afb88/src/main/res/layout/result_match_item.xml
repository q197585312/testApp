<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/green_light_white"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/result_match_title_tv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/green_light"
        android:gravity="center"

        android:paddingBottom="2dp"
        android:paddingLeft="10dp"
        android:paddingTop="2dp"
        android:text="联赛名称"
        android:textColor="@color/green_dark_bg"
        android:textSize="11sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/result_match_date_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"

            android:paddingBottom="8dp"
            android:paddingTop="5dp"
            android:text=""
            android:textColor="@color/black_grey"
            android:textSize="10sp"
            android:textStyle="bold" />

        <View
            android:layout_width="0.6dp"
            android:layout_height="match_parent"
            android:background="@color/green_white_thick_line" />

        <View
            android:layout_width="0.6dp"
            android:layout_height="match_parent"
            android:background="@color/grey_dialog_background" />

        <LinearLayout
            android:id="@+id/ll_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/result_match_home_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=""
                android:textColor="@color/black_grey"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/result_match_home_f_tv"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/oval_yellow_stroke_black"
                android:gravity="center"
                android:text="F"
                android:textColor="@color/black_grey"
                android:textSize="10sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/result_match_home_l_tv"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/oval_green_stroke_black"
                android:gravity="center"

                android:text="L"
                android:textColor="@color/black_grey"
                android:textSize="10sp"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/result_match_score_ll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:orientation="horizontal">

            <View
                android:layout_width="0.6dp"
                android:layout_height="match_parent"
                android:background="@color/green_white_thick_line" />

            <View
                android:layout_width="0.6dp"
                android:layout_height="match_parent"
                android:background="@color/grey_dialog_background" />

            <TextView
                android:id="@+id/result_match_score_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/grey_background"
                android:gravity="center"
                android:text=""
                android:textColor="@color/black_grey"
                android:textSize="10sp"
                android:textStyle="bold" />


            <View
                android:layout_width="0.6dp"
                android:layout_height="match_parent"
                android:background="@color/grey_dialog_background" />

            <View
                android:layout_width="0.6dp"
                android:layout_height="match_parent"
                android:background="@color/green_white_thick_line" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_away"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/result_match_away_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"

                android:text=""
                android:textColor="@color/black_grey"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/result_match_away_f_tv"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/oval_yellow_stroke_black"
                android:gravity="center"

                android:text="F"
                android:textColor="@color/black_grey"
                android:textSize="10sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/result_match_away_l_tv"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/oval_green_stroke_black"
                android:gravity="center"

                android:text="L"
                android:textColor="@color/black_grey"
                android:textSize="10sp"
                android:visibility="gone" />
        </LinearLayout>

        <View
            android:layout_width="0.6dp"
            android:layout_height="match_parent"
            android:background="@color/green_white_thick_line" />

        <View
            android:layout_width="0.6dp"
            android:layout_height="match_parent"
            android:background="@color/grey_dialog_background" />

        <TextView
            android:id="@+id/result_match_half_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"

            android:text=""
            android:textColor="@color/black_grey"
            android:textSize="10sp"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@color/green_white_thick_line" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@color/grey_dialog_background" />
</LinearLayout>