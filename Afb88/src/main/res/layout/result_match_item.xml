<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/green_light_white"
    android:gravity="center"
    android:orientation="vertical">

    <View
        android:id="@+id/result_match_head_v"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:padding="5dp" />

    <TextView
        android:id="@+id/result_match_title_tv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/green_light"
        android:gravity="center"
        android:maxLines="1"
        android:paddingBottom="2dp"
        android:paddingLeft="10dp"
        android:paddingTop="2dp"
        android:text="联赛名称"
        android:textColor="@color/green_dark_bg"
        android:textSize="11sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/result_match_date_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLength="10"
            android:textStyle="bold"
            android:paddingTop="5dp"
            android:paddingBottom="8dp"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/red_title"
            android:textSize="10sp" />
        <View
            android:layout_width="0.6dp"
            android:layout_height="match_parent"
            android:background="@color/green_white_thick_line" />

        <View
            android:layout_width="0.6dp"
            android:layout_height="match_parent"
            android:background="@color/grey_dialog_background" />
        <TextView
            android:id="@+id/result_match_home_tv"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/red_title"
            android:textSize="10sp" />

        <View
            android:layout_width="0.6dp"
            android:layout_height="match_parent"
            android:background="@color/green_white_thick_line" />

        <View
            android:layout_width="0.6dp"
            android:layout_height="match_parent"
            android:background="@color/grey_dialog_background" />
        <TextView
            android:id="@+id/result_match_score_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:maxLength="10"
            android:textStyle="bold"
            android:maxLines="1"
            android:text=""
            android:background="@color/grey_background"
            android:textColor="@color/red_title"
            android:textSize="10sp" />



        <View
            android:layout_width="0.6dp"
            android:layout_height="match_parent"
            android:background="@color/green_white_thick_line" />

        <View
            android:layout_width="0.6dp"
            android:layout_height="match_parent"
            android:background="@color/grey_dialog_background" />

        <TextView
            android:id="@+id/result_match_away_tv"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/red_title"
            android:textSize="10sp" />
        <View
            android:layout_width="0.6dp"
            android:layout_height="match_parent"
            android:background="@color/green_white_thick_line" />

        <View
            android:layout_width="0.6dp"
            android:layout_height="match_parent"
            android:background="@color/grey_dialog_background" />
        <TextView
            android:id="@+id/result_match_half_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLength="10"
            android:textStyle="bold"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/red_title"
            android:textSize="10sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@color/green_white_thick_line" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@color/grey_dialog_background" />
</LinearLayout>