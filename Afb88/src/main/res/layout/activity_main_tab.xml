<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar_layout"

        />

    <FrameLayout
        android:id="@+id/fl_main_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:id="@+id/ll_tab_menu_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey_default_bg"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:padding="3dp">

        <FrameLayout
            android:id="@+id/fl_menu_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_tab_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="10sp"
                android:drawableTop="@mipmap/main_menu_a_hover"
                android:text="@string/home"
                android:textColor="@color/green900" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_menu_center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_tab_center"
                android:textSize="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableTop="@mipmap/main_menu_user"
                android:text="@string/center"
                android:textColor="@color/black_grey" />
        </FrameLayout>


        <FrameLayout
            android:id="@+id/fl_menu_statemente"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_tab_statement"
                android:layout_width="wrap_content"
                android:textSize="10sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableTop="@mipmap/main_menu_order"
                android:text="@string/statement"
                android:textColor="@color/black_grey" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_menu_stake"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:textSize="10sp"
                android:id="@+id/tv_tab_stake"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableTop="@mipmap/main_menu_more"
                android:text="@string/stake"
                android:textColor="@color/black_grey" />
        </FrameLayout>
    </LinearLayout>

</LinearLayout>