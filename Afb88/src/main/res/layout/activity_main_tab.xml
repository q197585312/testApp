<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_more"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/toolbar_layout" />

        <FrameLayout
            android:id="@+id/fl_main_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />


        <TextView
            android:id="@+id/home_pop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:drawableBottom="@drawable/line_white"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:minLines="1"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/gray_dark"
            android:textColorHint="@color/grey_background_trans"
            android:textSize="17sp"
            android:visibility="gone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="@color/grey_light" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="@color/grey_light" />

        <LinearLayout
            android:id="@+id/ll_tab_menu_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey_default_bg"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:paddingTop="4dp">

            <FrameLayout
                android:id="@+id/fl_menu_home"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_tab_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    android:drawableTop="@mipmap/main_menu_a"
                    android:text="结余"
                    android:textColor="@color/black_grey"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/fl_menu_statemente"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_tab_statement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    android:drawableTop="@mipmap/main_menu_order"
                    android:text="@string/statement"
                    android:textColor="@color/black_grey"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/fl_menu_center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_tab_center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    android:drawableTop="@mipmap/main_menu_user"
                    android:text="联系我们"
                    android:textColor="@color/black_grey"

                    android:textSize="12sp"
                    android:textStyle="bold" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/fl_menu_login_out"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_tab_login_out"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    android:drawableTop="@mipmap/main_menu_logout"
                    android:text="更多"
                    android:textColor="@color/black_grey"
                    android:textSize="12sp"
                    android:textStyle="bold" />


            </FrameLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="#137D33"
            android:gravity="left|center_vertical"
            android:paddingLeft="10dp"
            android:text="@string/more"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/main_more"
            android:layout_width="260dp"
            android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
    </LinearLayout>
</android.support.v4.widget.DrawerLayout>