<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">
    <View android:id="@+id/module_match_head_v"
        android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_height="20dp"
        android:background="@color/green_light_white"
        />
    <TextView
        android:background="@color/green_light"
        android:id="@+id/module_match_title_tv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textColor="@color/green900"
        android:text="联赛名称"
        android:textSize="11sp"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:layout_weight="1"
        android:gravity="center"
        />

    <LinearLayout
        android:background="@color/green_light_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <FrameLayout
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/module_match_collection_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grey_dark_word"
                android:layout_gravity="center_vertical"
                android:background="@mipmap/collection_star_yellow_not_soild"
                android:gravity="center"
                android:textSize="10sp" />
        </FrameLayout>

        <LinearLayout
            android:layout_marginLeft="3dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/module_match_left1_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="3dp">

            <TextView
                android:id="@+id/module_match_live_iv"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:visibility="visible"
                android:gravity="center"
                android:layout_width="28dp"
                android:textSize="7sp" />
            <TextView
                android:id="@+id/module_match_date_tv"
              android:textColor="@color/grey_thick_line"
                android:textSize="10sp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="10"
                android:maxLines="1"
                android:text="03/11" />

            <TextView
                android:id="@+id/module_match_time_tv"
              android:textColor="@color/grey_thick_line"
                android:textSize="10sp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="5"
                android:maxLines="1"
                android:text="03/11" />
        </LinearLayout>

        <LinearLayout
            android:padding="3dp"
            android:id="@+id/module_match_left2_ll"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical"
            >
            <LinearLayout
               android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/module_match_home_rea_card_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="1dp"
                    android:layout_gravity="center"
                    android:paddingRight="1dp"
                    android:visibility="gone"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="9sp"
                    android:textStyle="bold"
                    android:background="@color/red"
                    />
                <TextView
                    android:layout_marginLeft="2dp"
                    android:id="@+id/module_match_home_team_tv"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dp"
                    android:textSize="11sp"
                    android:textColor="@color/black_grey"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="zheshiyigeceshi mingz " />
            </LinearLayout>
            <LinearLayout
               android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/module_match_away_rea_card_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_marginTop="1dp"
                    android:textSize="9sp"
                    android:visibility="visible"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="1dp"
                    android:paddingRight="1dp"
                    android:gravity="center"
                    android:textStyle="bold"

                    />
                <TextView
                    android:layout_marginLeft="2dp"
                    android:id="@+id/module_match_away_team_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dp"
                    android:textSize="11sp"
                    android:textColor="@color/black_grey"
                    android:layout_marginTop="1dp"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="zheshiyigeceshi mingz " />
            </LinearLayout>
        </LinearLayout>

      <View
          android:background="@color/grey_thick_line"
          android:layout_width="0.6dp"
          android:layout_height="match_parent"/>

        <com.nanyang.app.myView.LinkedViewPager.ViewPager
            android:id="@+id/module_center_vp"
            android:layout_width="140dp"
            android:layout_height="match_parent">

        </com.nanyang.app.myView.LinkedViewPager.ViewPager>

        <View
            android:background="@color/grey_thick_line"
            android:layout_width="0.6dp"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/module_right_mark_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@mipmap/sport_add_oval_yellow" />
    </LinearLayout>
    <View
        android:background="@color/grey_thick_line"
        android:layout_width="match_parent"
        android:layout_height="0.6dp"/>
</LinearLayout>