<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="heightLeft"
            type="float" />
        <variable
            name="itemClick"
            type="com.nanyang.app.main.home.OnItemClickListener" />

        <variable
            name="itemBean"
            type="com.nanyang.app.data.Main" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:onClick="@{(v)->itemClick.onItemClick(itemBean)}">

        <com.unkonw.testapp.libs.view.CircleImageView
            android:id="@+id/iv_content"
            imgUrl="@{itemBean.img}"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            app:borderWidth="1dp"
            app:ease_border_color="@color/gold"
            app:ease_radius="8dp"
            app:es_shape_type="rectangle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/textView5"
            />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{itemBean.name}"
            android:paddingHorizontal="4dp"
            android:gravity="center_horizontal"
            android:lines="2"
            android:textAllCaps="true"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
           />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>