<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green_black"
    android:orientation="vertical">

    <include layout="@layout/toolbar_layout_1188" />

    <ImageView
        android:id="@+id/banner_Img"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@mipmap/poker_banner" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/porkercasino_rc"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"></androidx.recyclerview.widget.RecyclerView>

</LinearLayout>