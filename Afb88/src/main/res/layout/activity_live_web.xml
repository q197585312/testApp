<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <include layout="@layout/toolbar_layout"
        android:visibility="gone"/>
    <LinearLayout
        android:id="@+id/ll_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green_dark"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_left_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="8dp"
            android:background="@mipmap/arrow_white_back" />

        <TextView
            android:id="@+id/tv_title_match"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:text="Instant video"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:textStyle="bold" />
        <ImageView
            android:id="@+id/iv_live_play"
            android:layout_marginRight="10dp"
            android:src="@mipmap/live_play_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <WebView
        android:id="@+id/web_wv"
        android:layout_width="match_parent"
        android:layout_height="170dp" />

</LinearLayout>