<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/selectable_text_parent_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/green1"
    android:layout_margin="2dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/selectable_text_content_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableLeft="@mipmap/checkbox_pressed"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:textColor="@color/black_grey"
        android:textSize="10sp" />

    <TextView

        android:id="@+id/selectable_num_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:background="@drawable/oval_green_stroke_black"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:text="1"

        android:textColor="@color/white"
        android:textSize="9sp" />

</LinearLayout>