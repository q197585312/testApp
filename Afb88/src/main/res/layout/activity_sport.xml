<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_more"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/toolbar_layout" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <include layout="@layout/include_left_menu" />


            <LinearLayout
                android:id="@+id/right_ll"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/green_dark">


                    <LinearLayout
                        android:id="@+id/ll_line1"
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/sport_title_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAllCaps="true"
                            android:textColor="@color/trans_white"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/sports_selected_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:textSize="13sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text=">"
                            android:textColor="@color/trans_white"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/sports_language_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="clickLanguage"
                            android:paddingLeft="5dp"
                            android:paddingRight="15dp"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tv_balance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:textColor="@color/yellow2"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_line2"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        app:layout_constraintLeft_toLeftOf="@+id/ll_line1"
                        app:layout_constraintRight_toRightOf="@+id/ll_line1"
                        app:layout_constraintTop_toBottomOf="@+id/ll_line1">

                        <ImageView
                            android:id="@+id/iv_home_menu"
                            android:layout_width="22dp"
                            android:layout_height="wrap_content"
                            android:contentDescription="@null"
                            android:onClick="clickLeftMenu"
                            android:src="@mipmap/home_menu_nav" />

                        <ImageView
                            android:id="@+id/iv_home_back"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:contentDescription="@null"
                            android:drawablePadding="5dp"
                            android:onClick="clickBack"
                            android:src="@mipmap/sport_home_white_24dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/sport_game_rectangle_green_dark_trans_gradient_line"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:padding="4dp">

                            <EditText

                                android:id="@+id/edt_match_search_content"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"
                                android:background="@null"
                                android:cursorVisible="false"
                                android:drawableLeft="@mipmap/sport_game_search_green"
                                android:drawablePadding="5dp"
                                android:hint="@string/select_league"
                                android:singleLine="true"
                                android:textColorHint="@color/trans_white"
                                android:textSize="13.5sp" />

                            <ImageView
                                android:id="@+id/iv_delete_search"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:onClick="clickDeleteSearch"
                                android:src="@mipmap/vs_oval_error_white"
                                android:visibility="gone" />

                        </LinearLayout>


                        <ImageView
                            android:id="@+id/match_cup_iv"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_marginLeft="10dp"
                            android:onClick="clickCup"
                            android:src="@mipmap/sport_game_cup_white" />


                        <FrameLayout
                            android:id="@+id/match_collection_fl"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_marginLeft="10dp"
                            android:background="@mipmap/sport_game_star_yellow"
                            android:onClick="clickCollectionStar">

                            <TextView
                                android:id="@+id/match_collection_num_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:background="@drawable/oval_red_stroke_black"
                                android:maxLines="1"
                                android:paddingBottom="1dp"
                                android:paddingLeft="3dp"
                                android:paddingRight="3dp"
                                android:paddingTop="1dp"
                                android:text="0"
                                android:textColor="@color/white"
                                android:textSize="8sp"
                                android:visibility="gone" />

                        </FrameLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_line3"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        app:layout_constraintLeft_toLeftOf="@+id/ll_line2"
                        app:layout_constraintRight_toRightOf="@+id/ll_line2"
                        app:layout_constraintTop_toBottomOf="@+id/ll_line2">

                        <ImageView
                            android:id="@+id/running_iv"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:background="@mipmap/sport_game_run_white"
                            android:onClick="clickAllRunning" />

                        <TextView
                            android:id="@+id/iv_all_add"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:drawableRight="@mipmap/arrow_down_drop_white"
                            android:gravity="center_vertical"
                            android:text="@string/All_Market"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tv_pc_type"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:drawablePadding="5dp"
                            android:gravity="center"
                            android:onClick="clickPcType"
                            android:padding="5dp"
                            android:text="@string/view2"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tv_odds_type"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:drawablePadding="5dp"
                            android:drawableRight="@mipmap/arrow_down_drop_white"
                            android:gravity="center_vertical"
                            android:onClick="clickOddsType"
                            android:padding="5dp"
                            android:text="@string/MY_ODDS"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tv_league_major"
                            android:layout_width="wrap_content"
                            android:layout_height="22dp"
                            android:drawablePadding="5dp"
                            android:drawableRight="@mipmap/sport_game_cup_white"
                            android:gravity="center_vertical|right"
                            android:onClick="clickTop"
                            android:text="@string/league"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:textSize="13sp" />

                        <FrameLayout
                            android:layout_width="42dp"
                            android:layout_height="match_parent"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/iv_order_top"
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:layout_gravity="center"
                                android:contentDescription="@null"
                                android:onClick="clickOrderTop"
                                android:src="@mipmap/sport_bottom_teb_shopping_null" />

                            <TextView
                                android:id="@+id/tv_order_count_top"
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_gravity="right|top"
                                android:layout_marginLeft="12dp"
                                android:background="@drawable/oval_red_stroke_black"
                                android:gravity="center"
                                android:text="10"
                                android:textColor="@color/white"
                                android:textSize="9dp"
                                android:textStyle="bold"
                                android:visibility="gone" />
                        </FrameLayout>

                        <ImageView
                            android:id="@+id/iv_sort_time"
                            android:layout_width="22dp"
                            android:layout_height="22dp"

                            android:contentDescription="@null"
                            android:onClick="clickSortByTime"
                            android:src="@mipmap/sport_game_clock_white" />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/ll_header_sport"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/ll_line3" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/ll_line2">

                        <LinearLayout
                            android:id="@+id/fl_top_video"
                            android:layout_width="match_parent"
                            android:layout_height="255dp"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <LinearLayout
                                android:id="@+id/ll_back_title_line"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:background="@color/green_dark"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/iv_left_back"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_marginLeft="8dp"
                                    android:background="@mipmap/go_back_left_white"
                                    android:onClick="clickCLosePlay" />

                                <TextView
                                    android:id="@+id/tv_match_play"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="5dp"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:onClick="onChangeMatchClick"
                                    android:text="@string/All_Match"
                                    android:textAllCaps="true"
                                    android:textColor="@color/white"
                                    android:textSize="13sp" />

                                <ImageView
                                    android:id="@+id/iv_title_live_stream"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"

                                    android:layout_weight="1"
                                    android:drawablePadding="5dp"
                                    android:gravity="center"
                                    android:padding="5dp"
                                    android:src="@mipmap/sport_tv_play_white"
                                    android:text="@string/live_stream"
                                    android:textAllCaps="true"
                                    android:textColor="@color/white"
                                    android:textStyle="bold" />

                                <ImageView
                                    android:id="@+id/iv_title_live_center"
                                    android:layout_width="0dp"
                                    android:layout_height="26dp"
                                    android:layout_gravity="center"

                                    android:layout_weight="1"
                                    android:drawablePadding="5dp"
                                    android:gravity="center"
                                    android:padding="5dp"
                                    android:src="@mipmap/sport_live_hall_white"
                                    android:text="@string/live_center"
                                    android:textAllCaps="true"
                                    android:textColor="@color/white"
                                    android:textStyle="bold" />

                                <ImageView
                                    android:id="@+id/iv_bet_list"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:onClick="clickBets"
                                    android:padding="6dp"
                                    android:src="@mipmap/sport_bet_list" />
                            </LinearLayout>

                            <FrameLayout
                                android:id="@+id/fl_run_match_title"
                                android:layout_width="match_parent"
                                android:layout_height="16dp"
                                android:background="@color/black"
                                android:onClick="clickRunTitle">

                                <LinearLayout
                                    android:id="@+id/ll_run_match_title"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/tv_run_match_home"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:ellipsize="marquee"
                                        android:focusable="true"
                                        android:focusableInTouchMode="true"
                                        android:gravity="right"
                                        android:marqueeRepeatLimit="marquee_forever"
                                        android:maxLines="1"
                                        android:paddingRight="10dp"
                                        android:textColor="@color/white"
                                        android:textSize="12sp" />


                                    <TextView
                                        android:id="@+id/tv_run_match_home_score"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        android:paddingLeft="5dp"
                                        android:paddingRight="5dp"
                                        android:textColor="@color/yellow_center_user"
                                        android:textSize="12sp"
                                        android:textStyle="bold" />

                                    <TextView

                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        android:text="-"
                                        android:textColor="@color/grey_dark"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/tv_run_match_away_score"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        android:paddingLeft="5dp"
                                        android:paddingRight="5dp"
                                        android:textColor="@color/yellow_center_user"
                                        android:textSize="12sp"
                                        android:textStyle="bold" />


                                    <TextView
                                        android:id="@+id/tv_run_match_away"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:ellipsize="marquee"
                                        android:focusable="true"
                                        android:focusableInTouchMode="true"
                                        android:marqueeRepeatLimit="marquee_forever"
                                        android:maxLines="1"
                                        android:paddingRight="10dp"
                                        android:textColor="@color/white"
                                        android:textSize="12sp" />

                                </LinearLayout>

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical|right"
                                    android:background="@mipmap/arrow_down_drop_white" />
                            </FrameLayout>

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1">

                                <com.unkonw.testapp.libs.widget.VideoPlayer
                                    android:id="@+id/video_player_stream"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" />

                                <TextView
                                    android:id="@+id/tv_run_time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:textColor="@color/white"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />

                                <WebView
                                    android:id="@+id/web_wv"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:visibility="gone" />

                                <LinearLayout
                                    android:id="@+id/ll_status"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom"
                                    android:background="@color/grey_trans"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal"
                                    android:padding="5dp">

                                    <ImageView
                                        android:id="@+id/iv_play_status"
                                        android:layout_width="22dp"
                                        android:layout_height="22dp"
                                        android:layout_marginLeft="8dp"
                                        android:src="@mipmap/play_pause_white" />

                                    <View
                                        android:layout_width="0dp"
                                        android:layout_height="1dp"
                                        android:layout_weight="1" />

                                    <ImageView
                                        android:id="@+id/iv_voice"
                                        android:layout_width="27dp"
                                        android:layout_height="27dp"
                                        android:src="@mipmap/play_mute_white" />

                                    <ImageView
                                        android:id="@+id/iv_full_screen"
                                        android:layout_width="24dp"
                                        android:layout_height="24dp"
                                        android:layout_marginLeft="5dp"
                                        android:onClick="closeTv"
                                        android:src="@mipmap/play_close_tv" />
                                </LinearLayout>
                            </FrameLayout>


                        </LinearLayout>

                        <include
                            layout="@layout/popupwindow_match_betting"
                            android:visibility="gone" />
                    </LinearLayout>

                </android.support.constraint.ConstraintLayout>


                <FrameLayout
                    android:id="@+id/fl_main_content"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@color/grey_background" />

                <LinearLayout
                    android:id="@+id/ll_footer_sport"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.8dp"
                    android:background="@color/grey_light" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/white" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_sport_menu_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey_dialog_background"
            android:orientation="horizontal"
            android:paddingBottom="2dp">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingTop="5dp">

                <TextView

                    android:id="@+id/tv_record"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="2dp"
                    android:drawableTop="@mipmap/sport_botton_teb_statement"
                    android:gravity="center"
                    android:onClick="clickBets"
                    android:text="@string/TabMyBets"
                    android:textAllCaps="true"
                    android:textColor="@color/gray_dark"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_waite_count"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="12dp"
                    android:background="@drawable/oval_red_stroke_black"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="9dp"
                    android:textStyle="bold"
                    android:visibility="gone" />

            </FrameLayout>

            <TextView
                android:id="@+id/tv_sport_select"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="2dp"
                android:drawableTop="@mipmap/sport_botton_teb_soccer"
                android:gravity="center"
                android:onClick="clickSportSelect"
                android:paddingTop="5dp"
                android:text="@string/Soccer"
                android:textAllCaps="true"
                android:textColor="@color/gray_dark"
                android:textSize="12sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingTop="5dp">


                <TextView
                    android:id="@+id/tv_mix"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:button="@null"
                    android:drawablePadding="2dp"
                    android:drawableTop="@mipmap/sport_bottom_teb_shopping_null"
                    android:gravity="center"
                    android:onClick="clickOrder"
                    android:text="@string/bet_slip"
                    android:textAllCaps="true"
                    android:textColor="@color/grey_light"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_mix_count"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="12dp"
                    android:background="@drawable/oval_red_stroke_black"
                    android:gravity="center"
                    android:text="10"
                    android:textColor="@color/white"
                    android:textSize="9dp"
                    android:textStyle="bold"
                    android:visibility="gone" />
            </FrameLayout>


            <TextView
                android:id="@+id/tv_way_run"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="2dp"
                android:drawableTop="@mipmap/date_running_green"
                android:ellipsize="start"
                android:gravity="center"
                android:maxLines="1"
                android:onClick="clickSportWayRun"
                android:paddingTop="5dp"
                android:text="@string/running"
                android:textAllCaps="true"
                android:textColor="@color/grey_dark"
                android:textSize="12sp"
                android:textStyle="bold" />

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="12dp"
                    android:src="@mipmap/message_small" />

                <TextView
                    android:id="@+id/tv_menu"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawablePadding="2dp"
                    android:drawableTop="@mipmap/sport_botton_teb_more_menu"
                    android:gravity="center"
                    android:onClick="clickMoreMenu"
                    android:paddingTop="5dp"
                    android:text="@string/more"
                    android:textAllCaps="true"
                    android:textColor="@color/grey_dark"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </FrameLayout>


        </LinearLayout>

    </LinearLayout>


    <include layout="@layout/include_drawer_layout_right" />
</android.support.v4.widget.DrawerLayout>
