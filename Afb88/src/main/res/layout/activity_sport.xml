<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_more"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/toolbar_layout" />

        <LinearLayout
            android:id="@+id/sport_header_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/green_dark"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="5dp"
                android:paddingTop="5dp">

                <TextView
                    android:id="@+id/sport_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="@color/yellow2"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="5dp"
                android:paddingTop="5dp">

                <ImageView
                    android:id="@+id/iv_home_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@null"
                    android:drawablePadding="5dp"
                    android:onClick="clickBack"
                    android:src="@mipmap/sport_home_white_24dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/sport_game_rectangle_green_dark_trans_gradient_line"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <EditText
                        android:id="@+id/edt_match_search_content"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:drawableLeft="@mipmap/sport_game_search_green"
                        android:drawablePadding="5dp"
                        android:hint="@string/Select_League"
                        android:textSize="13sp" />

                    <ImageView
                        android:id="@+id/iv_delete_search"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="clickDeleteSearch"
                        android:src="@mipmap/vs_oval_error_white"
                        android:visibility="gone" />

                </LinearLayout>


                <ImageView
                    android:id="@+id/match_cup_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:onClick="clickCup"
                    android:src="@mipmap/sport_game_cup_white" />

                <ImageView
                    android:id="@+id/match_collection_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@mipmap/sport_game_star_yellow"
                    android:onClick="clickCollectionStar" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/running_iv"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:background="@mipmap/sport_game_run_white"
                    android:onClick="clickRunning" />

                <TextView
                    android:id="@+id/iv_all_add"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:drawableBottom="@drawable/line_white"
                    android:drawableRight="@mipmap/arrow_down_drop_white"
                    android:gravity="center_vertical"
                    android:text="@string/All_Markets"
                    android:textColor="@color/white"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_odds_type"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:drawablePadding="5dp"
                    android:drawableRight="@mipmap/arrow_down_drop_white"
                    android:gravity="center_vertical"
                    android:onClick="clickOddsType"
                    android:padding="5dp"
                    android:text="@string/HK_ODDS"
                    android:textColor="@color/white"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_league_major"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawablePadding="5dp"
                    android:drawableRight="@mipmap/sport_game_cup_white"
                    android:gravity="center_vertical|right"
                    android:onClick="clickMajor"
                    android:padding="5dp"
                    android:text="@string/league"
                    android:textColor="@color/white"
                    android:textSize="13sp" />

                <FrameLayout
                    android:layout_width="42dp"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/iv_order_top"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:contentDescription="@null"
                        android:onClick="clickOrderTop"
                        android:src="@mipmap/sport_shopping_top_gray" />

                    <TextView
                        android:id="@+id/tv_order_count_top"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="right|top"
                        android:layout_marginLeft="12dp"
                        android:background="@drawable/oval_red_stroke_black"
                        android:gravity="center"
                        android:text="10"
                        android:textColor="@color/white"
                        android:textSize="9dp"
                        android:textStyle="bold"
                        android:visibility="gone" />
                </FrameLayout>

                <ImageView
                    android:id="@+id/iv_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:contentDescription="@null"
                    android:src="@mipmap/sport_game_clock_white" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_header_sport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </LinearLayout>


        <FrameLayout
            android:id="@+id/fl_main_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/grey_background" />

        <LinearLayout
            android:id="@+id/ll_footer_sport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="@color/grey_light" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/white" />

        <LinearLayout
            android:id="@+id/ll_sport_menu_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey_dialog_background"
            android:orientation="horizontal"
            android:paddingBottom="2dp"
            android:paddingTop="5dp">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_record"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="2dp"
                    android:drawableTop="@mipmap/sport_botton_teb_statement"
                    android:gravity="center"
                    android:onClick="clickBets"
                    android:text="@string/history_record"
                    android:textColor="@color/gray_dark"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_waite_count"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="12dp"
                    android:background="@drawable/oval_red_stroke_black"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="9dp"
                    android:textStyle="bold"
                    android:visibility="gone" />

            </FrameLayout>

            <TextView
                android:id="@+id/tv_sport_select"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="2dp"
                android:drawableTop="@mipmap/sport_botton_teb_soccer"
                android:gravity="center"
                android:onClick="clickSportSelect"
                android:text="@string/Soccer"
                android:textColor="@color/gray_dark"
                android:textSize="12sp"
                android:textStyle="bold" />

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">


                <TextView
                    android:id="@+id/tv_mix"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:button="@null"
                    android:drawablePadding="2dp"
                    android:drawableTop="@mipmap/sport_bottom_teb_shopping"
                    android:gravity="center"
                    android:onClick="clickOrder"
                    android:text="@string/ORDER"
                    android:textColor="@color/grey_dark"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_mix_count"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="12dp"
                    android:background="@drawable/oval_red_stroke_black"
                    android:gravity="center"
                    android:text="10"
                    android:textColor="@color/white"
                    android:textSize="9dp"
                    android:textStyle="bold"
                    android:visibility="gone" />
            </FrameLayout>


            <TextView
                android:id="@+id/tv_way_run"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="2dp"
                android:drawableTop="@mipmap/sport_today"
                android:gravity="center"
                android:onClick="clickSportWayRun"
                android:text="@string/running"
                android:textColor="@color/grey_dark"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_menu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="2dp"
                android:drawableTop="@mipmap/sport_botton_teb_more_menu"
                android:gravity="center"
                android:onClick="clickMoreMenu"
                android:text="@string/more"
                android:textColor="@color/grey_dark"
                android:textSize="12sp"
                android:textStyle="bold" />


        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/include_drawer_layout_right" />
</android.support.v4.widget.DrawerLayout>