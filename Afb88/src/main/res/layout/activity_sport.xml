<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:skin="http://schemas.android.com/android/skin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/green_dark"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sport_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:textSize="10sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/green_dark"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView

            android:id="@+id/iv_home_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:drawablePadding="5dp"
            android:onClick="clickBack"
            android:padding="5dp"
            android:src="@mipmap/sport_home_white_24dp" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/sport_game_rectangle_green_dark_trans_gradient_line"
            android:drawableLeft="@mipmap/sport_game_search_green"
            android:drawablePadding="5dp"
            android:padding="3dp" />

        <ImageView
            android:id="@+id/match_cup_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:onClick="clickCup"
            android:src="@mipmap/sport_game_cup_white" />

        <ImageView
            android:id="@+id/match_collection_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@mipmap/sport_game_star_yellow"
            android:onClick="clickCollectionStar" />

    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green_dark"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/running_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:onClick="clickRunning"
            android:src="@mipmap/sport_game_run_white" />

        <TextView
            android:id="@+id/iv_all_add"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableBottom="@drawable/line_white"
            android:drawableRight="@mipmap/arrow_down_drop_white"
            android:gravity="center"
            android:text="@string/All_Markets"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_odds_type"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:onClick="clickOddsType"
            android:drawableRight="@mipmap/arrow_down_drop_white"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/MY_ODDS"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_league_main"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableRight="@mipmap/sport_game_cup_white"
            android:gravity="center_vertical|right"
            android:padding="5dp"
            android:text="@string/league"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <ImageView

            android:id="@+id/iv_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:padding="5dp"
            android:src="@mipmap/sport_game_clock_white" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/grey_background" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/grey_light" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/white" />

    <LinearLayout
        android:id="@+id/ll_sport_menu_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey_dialog_background"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_record"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawablePadding="2dp"
            android:drawableTop="@mipmap/sport_refresh_black"
            android:gravity="center"
            android:onClick="clickBettingHistory"
            android:paddingTop="5dp"
            android:text="@string/history_record"
            android:textColor="@color/gray_dark"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_sport_select"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawablePadding="2dp"
            android:drawableTop="@mipmap/sport_refresh_black"
            android:gravity="center"
            android:onClick="clickSportSelect"
            android:paddingTop="5dp"
            android:text="@string/Soccer"
            android:textColor="@color/gray_dark"
            android:textSize="12sp"
            android:textStyle="bold" />

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_mix"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:button="@null"
                android:drawableTop="@mipmap/sport_black_shopping_cart"
                android:gravity="center"
                android:onClick="clickOrder"
                android:paddingTop="5dp"
                android:text="@string/ORDER"
                android:textColor="@color/grey_dark"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_mix_count"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:background="@drawable/oval_green_stroke_black"
                android:gravity="center"
                android:text="10"
                android:textColor="@color/white"
                android:textSize="9dp"
                android:textStyle="bold"
                android:visibility="gone" />
        </FrameLayout>


        <TextView
            android:id="@+id/tv_way_run"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@mipmap/sport_star_black"
            android:gravity="center"
            android:onClick="clickSportWayRun"
            android:paddingTop="5dp"
            android:text="@string/running"
            android:textColor="@color/grey_dark"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_menu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@mipmap/sport_menu_list_black"
            android:gravity="center"
            android:onClick="clickMoreMenu"
            android:paddingTop="5dp"
            android:text="@string/menu"
            android:textColor="@color/grey_dark"
            android:textSize="12sp"
            android:textStyle="bold" />


    </LinearLayout>

</LinearLayout>