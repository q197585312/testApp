<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey_white_bg"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_match_outside"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <View
            android:id="@+id/module_match_head_v"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/grey_white_bg"
            android:padding="5dp" />

        <LinearLayout
            android:id="@+id/module_match_title_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey_thick_line"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="4dp">

            <TextView
                android:id="@+id/module_League_collection_tv"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dp"
                android:background="@mipmap/sport_game_star_yellow"
                android:gravity="center"
                android:textColor="@color/grey_dark_word"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/module_match_title_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:paddingLeft="10dp"
                android:textColor="@color/black_grey" />

            <TextView
                android:id="@+id/module_League_child_count_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="2dp"
                android:background="@drawable/oval_green_stroke_black"
                android:gravity="center"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"

                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>

        <View
            android:background="@color/gray_dark"
            android:layout_width="match_parent"
            android:layout_height="1px"></View>

        <LinearLayout
            android:id="@+id/ll_match_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="2dp">

                <TextView
                    android:id="@+id/module_match_collection_tv"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="2dp"
                    android:background="@mipmap/sport_game_star_yellow"
                    android:gravity="center"
                    android:textColor="@color/grey_dark_word" />

                <ImageView
                    android:id="@+id/iv_last_call_gif"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="4dp" />

                <TextView
                    android:id="@+id/module_match_live_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="4dp"
                    android:gravity="center"
                    android:maxLines="1"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/module_match_date_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="4dp"
                    android:gravity="center"
                    android:maxLines="1"
                    android:textColor="@color/grey_thick_line"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:visibility="visible" />


                <TextView
                    android:id="@+id/module_match_time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="4dp"
                    android:gravity="center_vertical"

                    android:maxLines="1"
                    android:textColor="@color/grey_thick_line"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/module_match_has_p_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="4dp"
                    android:background="@drawable/rectangle_green_stroke_green_corner2"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:text="P"
                    android:textAllCaps="true"
                    android:textColor="@color/green"
                    android:textSize="13sp" />


                <ImageView
                    android:id="@+id/iv_hall_btn"
                    android:layout_width="23dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="4dp"
                    android:scaleType="fitXY"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/module_right_mark_tv"
                    android:layout_width="31dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="4dp"
                    android:background="@drawable/match_btn_shadow_bottom"
                    android:drawableLeft="@mipmap/crude_add_green"
                    android:gravity="center_vertical"
                    android:paddingLeft="0.5dp"
                    android:text="44"
                    android:textColor="@color/black_grey"
                    android:textSize="13sp"
                    android:visibility="visible" />


                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/hdp_title_tv"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:maxLines="1"
                    android:paddingRight="2dp"
                    android:text="@string/FT_HDP"
                    android:textColor="@color/black_grey"
                    android:textSize="13.5sp" />

                <TextView
                    android:id="@+id/ou_title_tv"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="@string/FT_OU"
                    android:textColor="@color/black_grey"
                    android:textSize="13.5sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_data1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:id="@+id/module_match_left1_ll1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="3dp">

                        <TextView
                            android:id="@+id/module_match_live_iv1"
                            android:layout_width="28dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:maxLines="1"
                            android:textSize="7sp"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/module_match_date_tv1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:maxLength="10"
                            android:maxLines="1"
                            android:text="03/11"
                            android:textColor="@color/grey_thick_line"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/module_match_time_tv1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:maxLength="5"
                            android:maxLines="1"
                            android:text="03/11"
                            android:textColor="@color/grey_thick_line"
                            android:textSize="10sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/module_match_left2_ll1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:padding="2dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/module_match_home_red_card_tv1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@color/red"
                                android:gravity="center"
                                android:paddingLeft="1dp"
                                android:paddingRight="1dp"
                                android:textColor="@color/white"
                                android:textSize="9sp"
                                android:textStyle="bold"
                                android:visibility="gone" />

                            <TextView
                                android:id="@+id/module_match_home_team_tv1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="2dp"
                                android:drawablePadding="5dp"
                                android:gravity="left"
                                android:maxLines="1"
                                android:text="zheshiyigeceshi mingz "
                                android:textColor="@color/black_grey"
                                android:textSize="11sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/module_match_away_red_card_tv1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginTop="1dp"
                                android:gravity="center"
                                android:paddingLeft="1dp"
                                android:paddingRight="1dp"
                                android:textColor="@color/white"
                                android:textSize="9sp"
                                android:textStyle="bold"
                                android:visibility="visible"

                                />

                            <TextView
                                android:id="@+id/module_match_away_team_tv1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="2dp"
                                android:layout_marginTop="1dp"
                                android:drawablePadding="5dp"
                                android:gravity="left"
                                android:maxLines="1"
                                android:text="zheshiyigeceshi mingz "
                                android:textColor="@color/black_grey"
                                android:textSize="11sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="0.6dp"
                        android:layout_height="match_parent"
                        android:background="@color/grey_button" />

                    <View
                        android:layout_width="0.6dp"
                        android:layout_height="match_parent"
                        android:background="@color/grey_dialog_background" />

                    <FrameLayout
                        android:id="@+id/module_center_sl1"
                        android:layout_width="140dp"
                        android:layout_height="match_parent">

                        <include
                            layout="@layout/sport_item_table_module_viewpager"
                            android:visibility="gone" />


                    </FrameLayout>


                    <FrameLayout
                        android:id="@+id/fl_right"
                        android:layout_width="24dp"
                        android:layout_height="wrap_content">

                    </FrameLayout>

                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <FrameLayout
                    android:id="@+id/module_match_collection_fl"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center">


                </FrameLayout>

                <LinearLayout
                    android:id="@+id/module_match_left1_ll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="3dp"
                    android:visibility="gone">


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/module_match_left2_ll"
                    android:layout_width="0dp"
                    android:layout_height="72dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingLeft="4dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/module_match_home_score_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:paddingLeft="1dp"
                            android:paddingRight="1dp"
                            android:textColor="@color/black"
                            android:textSize="13.5sp"
                            android:textStyle="bold"
                            android:visibility="visible" />


                        <TextView
                            android:id="@+id/module_match_home_team_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:drawablePadding="5dp"
                            android:gravity="left"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:text="zheshiyigeceshi mingz "
                            android:textColor="@color/black_grey"
                            android:textSize="13.5sp" />

                        <TextView
                            android:id="@+id/module_match_home_red_card_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@color/red"
                            android:gravity="center"
                            android:minWidth="10dp"
                            android:paddingLeft="1dp"
                            android:paddingRight="1dp"
                            android:textColor="@color/white"
                            android:textSize="11.5sp"
                            android:textStyle="bold"
                            android:visibility="gone" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/module_match_away_score_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="1dp"
                            android:gravity="center"
                            android:paddingLeft="1dp"
                            android:paddingRight="1dp"
                            android:textColor="@color/black"
                            android:textSize="13.5sp"
                            android:textStyle="bold"
                            android:visibility="visible" />


                        <TextView
                            android:id="@+id/module_match_away_team_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:layout_marginTop="1dp"
                            android:drawablePadding="5dp"
                            android:gravity="left"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:text="zheshiyigeceshi mingz "
                            android:textColor="@color/black_grey"
                            android:textSize="13.5sp" />

                        <TextView
                            android:id="@+id/module_match_away_red_card_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="1dp"
                            android:gravity="center"
                            android:minWidth="10dp"
                            android:paddingLeft="1dp"
                            android:paddingRight="1dp"
                            android:textColor="@color/white"
                            android:textSize="11.5sp"
                            android:textStyle="bold"
                            android:visibility="visible" />
                    </LinearLayout>
                </LinearLayout>


                <FrameLayout
                    android:id="@+id/module_center_sl"
                    android:layout_width="174dp"
                    android:layout_height="match_parent">

                    <include
                        layout="@layout/sport_item_table_module_viewpager"
                        android:visibility="gone" />

                </FrameLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/grey_button" />


            <View
                android:id="@+id/view_line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/grey_thick_line" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_title_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green_light_button"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="5dp"
            android:src="@mipmap/arrow_left_green_double" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_title_list"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginRight="5dp"
            android:src="@mipmap/arrow_right_green_double" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/common_ball_parent_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"

        />

</LinearLayout>