<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <include layout="@layout/toolbar_layout"/>

    <FrameLayout

        android:background="@color/green900"
       android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="center"
            android:id="@+id/vs_time_tv"
            android:text="11/12  |  23:20"
            android:paddingBottom="5dp"
            android:maxLines="1"
           android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"/>
    </FrameLayout>
    <xs.com.mylibrary.myview.indicator.PagerSlidingTabStrip
        android:id="@+id/ballgame_tabs_pstabs"
        android:layout_width="match_parent"
        android:layout_height="25dip"
        app:indicatorColor="@color/white"
        app:indicatorHeight="0dp"
        android:background="@color/blue_table" />

    <android.support.v4.view.ViewPager
        android:id="@+id/ballgame_pager_vp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"
       />
    <View
        style="@style/line_horizontal_grey1"
        android:background="@color/black_grey"/>
    <LinearLayout
        android:id="@+id/ballgame_bottom_ll"
        android:background="@color/grey_dialog_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <TextView
            android:onClick="clickBack"
            style="@style/rb_main_style"
            android:background="@null"
            android:clickable="true"
            android:textColor="@color/grey_dark"
            android:drawablePadding="2dp"
            android:textSize="10sp"
            android:drawableTop="@drawable/arrow_back_yellow"
            android:text="@string/back" />

        <TextView
            android:onClick="clickNoSettled"
            style="@style/rb_main_style"
            android:clickable="true"
            android:background="@null"
            android:textSize="10sp"
            android:drawablePadding="2dp"
            android:textColor="@color/grey_dark"
            android:drawableTop="@mipmap/oval_black_p_black"
            android:text="@string/not_settled" />

        <TextView
            android:onClick="clickSettled"
            style="@style/rb_main_style"
            android:background="@null"
            android:drawablePadding="2dp"
            android:clickable="true"
            android:textSize="10sp"
            android:textColor="@color/grey_dark"
            android:drawableTop="@mipmap/oval_black_hook_balck"
            android:text="@string/settled" />
    </LinearLayout>
</LinearLayout>