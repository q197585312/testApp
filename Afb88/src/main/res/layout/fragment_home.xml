<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:skin="http://schemas.android.com/android/skin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="240dp">

        <com.nanyang.app.Utils.AutoScrollViewPager
            android:id="@+id/auto_viewpager"
            android:layout_width="match_parent"
            android:layout_height="240dp"/>
        <FrameLayout
            android:background="@drawable/rectangle_green_gradient_line_trans"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"

            android:layout_height="30dp">
        <LinearLayout
            android:layout_gravity="bottom|right"
            android:id="@+id/in_layout"
            android:layout_margin="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"/>
        </FrameLayout>
    </RelativeLayout>

    <View
        android:layout_height="0.9dp"
        android:background="@color/green500_trans"
        android:layout_width="match_parent"/>
    <View
        android:layout_height="0.7dp"
        android:background="@color/green900_trans"
        android:layout_width="match_parent"/>

    <android.support.v7.widget.RecyclerView

        android:id="@+id/rv_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_green" />



</LinearLayout>