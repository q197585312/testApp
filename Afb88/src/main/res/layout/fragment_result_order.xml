<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green_light_white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_game_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:drawableBottom="@drawable/line_black"
            android:drawablePadding="3dp"
            android:drawableRight="@mipmap/arrow_down_drop_white"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:text="@string/Soccer"
            android:textColor="@color/green900"
            android:textSize="10sp" />

        <TextView

            android:id="@+id/tv_game_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:drawableBottom="@drawable/line_black"
            android:drawablePadding="3dp"
            android:drawableRight="@mipmap/arrow_down_drop_white"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:text="12/06/2017"
            android:textColor="@color/green900"
            android:textSize="10sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="3dp">

        <TextView
            android:id="@+id/tv_market"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:drawableBottom="@drawable/line_black"
            android:drawablePadding="3dp"
            android:drawableRight="@mipmap/arrow_down_drop_white"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:text="@string/All_Markets"
            android:textColor="@color/green900"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_sort"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:drawableBottom="@drawable/line_black"
            android:drawablePadding="3dp"
            android:drawableRight="@mipmap/arrow_down_drop_white"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:text="@string/hot_sort"
            android:textColor="@color/green900"
            android:textSize="10sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="3dp">

        <TextView
            android:id="@+id/tv_league_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:drawableBottom="@drawable/line_black"
            android:drawablePadding="3dp"
            android:drawableRight="@mipmap/arrow_down_drop_white"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:text="@string/all"
            android:textColor="@color/green900"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_submit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"

            android:background="@drawable/rectangle_green_all_corners2"
            android:gravity="center"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:text="@string/Submit"
            android:textColor="@color/white"
            android:textSize="10sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_title_parent1"
        style="@style/style_match_wrap"
        android:background="@color/green_dark"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            style="@style/text_match_black10"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:singleLine="true"
            android:text="@string/date"
            android:textColor="#000000"
            android:textSize="9sp" />

        <View
            android:layout_width="0.4dp"
            android:layout_height="30dp"
            android:background="@color/green_light" />

        <TextView
            style="@style/text_match_black10"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/Home"
            android:textColor="#000000"
            android:textSize="9sp" />

        <View
            android:layout_width="0.4dp"
            android:layout_height="30dp"
            android:background="@color/green_light" />

        <TextView
            style="@style/text_match_black10"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/result"
            android:textColor="#000000"
            android:textSize="9sp" />

        <View
            android:layout_width="0.4dp"
            android:layout_height="30dp"
            android:background="@color/green_light" />

        <TextView
            style="@style/text_match_black10"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/Away"
            android:textColor="#000000"
            android:textSize="9sp" />

        <View
            android:layout_width="0.4dp"
            android:layout_height="30dp"
            android:background="@color/green_light" />


        <TextView
            style="@style/text_match_black10"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/HT"
            android:textColor="#000000"
            android:textSize="9sp" />

    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_title_parent2"
        style="@style/style_match_wrap"
        android:background="#1F5E1F"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            style="@style/text_match_black10"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:singleLine="true"
            android:text="@string/date"
            android:textColor="#000000"
            android:textSize="9sp" />

        <View
            android:layout_width="0.4dp"
            android:layout_height="30dp"
            android:background="@color/green_light" />

        <TextView
            style="@style/text_match_black10"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/Home"
            android:textColor="#000000"
            android:textSize="9sp" />

        <View
            android:layout_width="0.4dp"
            android:layout_height="30dp"
            android:background="@color/green_light" />

        <TextView
            style="@style/text_match_black10"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:gravity="center"
            android:singleLine="true"
            android:text="VS"
            android:textColor="#000000"
            android:textSize="9sp" />

        <View
            android:layout_width="0.4dp"
            android:layout_height="30dp"
            android:background="@color/green_light" />

        <TextView
            style="@style/text_match_black10"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/Away"
            android:textColor="#000000"
            android:textSize="9sp" />

        <View
            android:layout_width="0.4dp"
            android:layout_height="30dp"
            android:background="@color/green_light" />


        <TextView
            style="@style/text_match_black10"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/winner"
            android:textColor="#000000"
            android:textSize="9sp" />


    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_title_parent3"
        style="@style/style_match_wrap"
        android:background="#1F5E1F"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_time"
            style="@style/text_match_black10"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:singleLine="true"
            android:text="@string/date"
            android:textColor="#000000"
            android:textSize="9sp" />

        <View
            android:layout_width="0.4dp"
            android:layout_height="30dp"
            android:background="@color/green_light" />

        <TextView
            style="@style/text_match_black10"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/league"
            android:textColor="#000000"
            android:textSize="9sp" />

        <View
            android:layout_width="0.4dp"
            android:layout_height="30dp"
            android:background="@color/green_light" />

        <TextView

            style="@style/text_match_black10"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/winner"
            android:textColor="#000000"
            android:textSize="9sp" />





    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        />


</LinearLayout>